@model TIPS.Entities.StoreEntities.MaterialReturn
@{
    ViewBag.Title = "MaterialReturn";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
@using (Html.BeginForm("MaterialReturn", "Store", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <div class="page-content-area">
            <span>@Html.Raw(ViewBag.BreadCrumb)</span>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="ace-icon fa fa-info-circle"></i>&nbsp;Basic Details</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                <div class="row" style="margin-top: 5px; margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Reference Num</b></label>
                                            @Html.TextBoxFor(m => m.ReturnRefNum, new { @class = "form-control select-sm", @readonly = true })
                                            @Html.HiddenFor(m => m.MatRetId)
                                            @Html.Hidden("BackUrl", Url.Action("MaterialReturnList", "Store"))
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Created By</b></label><br />
                                            @Model.CreatedBy
                                            @Html.HiddenFor(m => m.CreatedBy)
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Campus</b></label><br />
                                            @Model.Campus
                                            @Html.HiddenFor(m => m.Campus)
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>From Store</b></label><br />
                                            @Model.FromStore
                                            @Html.HiddenFor(m => m.FromStore)
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>To Store</b></label><br />
                                            @Model.ToStore
                                            @Html.HiddenFor(m => m.ToStore)
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Return Status</b></label><br />
                                            @Model.ReturnStatus
                                            @Html.HiddenFor(m => m.ReturnStatus)
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 10px; margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>DC Number</b></label>
                                            @Html.TextBoxFor(m => m.DCNumber, new { @class = "form-control select-sm" })
                                        </div>
                                        <div class="col-sm-3">
                                            <label for="form-field-select-1">
                                                <b>Description</b></label>
                                            @Html.TextAreaFor(m => m.Description, new { id = "Description", rows = 1, cols = 28, @class = "form-control select-sm" })
                                            @Html.HiddenFor(model => model.Description)
                                        </div>
                                        <div class="col-sm-3 Store">
                                        </div>
                                        <div class="col-sm-1">
                                            <br />
                                            <button type="button" class="btn btn-primary btn-block btn-sm" id="btnSave" name="btnSave"
                                                value="Save" onclick="SaveValidation()">
                                                <i class="ace-icon fa fa-file white"></i>Save
                                            </button>
                                        </div>
                                        <div class="col-sm-3">
                                            <br />
                                            <label for="form-field-select-1">
                                                <b>Choose Materials&nbsp;&nbsp;:&nbsp;</b></label>
                                            <a id="MaterialSearch" style="cursor: pointer;"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <table id="MaterialReturnList">
                    </table>
                    <div id="MaterialReturnListPager">
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-success btn-block btn-sm" id="Complete" name="Complete"
                            value="Complete">
                            <i class="fa fa-check white">&nbsp;</i>Complete
                        </button>
                    </div>
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-purple btn-block btn-sm" id="btnBack">
                            <i class="ace-icon fa fa-arrow-left white">&nbsp;</i>Back To Inbox
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="DivMaterialSearch">
    </div>
}
<script src="@Url.Content("~/Scripts/Store/MaterialReturn.js")" type="text/javascript"></script>
