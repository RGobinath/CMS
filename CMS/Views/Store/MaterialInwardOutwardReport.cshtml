@model TIPS.Entities.MonthMaster
@{
    ViewBag.Title = "MaterialInwardOutwardReport";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta charset="utf-8" />
<meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<!-- #section:basics/navbar.layout -->
<!-- /section:basics/navbar.layout -->
<script type="text/javascript">
    try { ace.settings.check('main-container', 'fixed') } catch (e) { }
</script>
<div class="page-content">

    <!-- /section:settings.box -->
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <!--Search Pannel-->
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <b>Campus</b>
                                        @Html.DropDownList("ddlcampus", new SelectList(ViewBag.ddlcampus, "Name", "Name"), "Select", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Material Group</b>
                                        @*@Html.DropDownList("ddlMaterialGroup", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { @Class = "form-control select-sm" })*@
                                        @Html.TextBox("txtMaterialGroup", "", new { @class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Material SubGroup</b>
                                        @*@Html.DropDownList("ddlMaterialSubGroup", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { @Class = "form-control select-sm" })*@
                                        @Html.TextBox("txtMaterialSubGroup", "", new { @class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Material</b>
                                        @Html.TextBox("txtMaterial", "", new { @class = "form-control input-sm" })
                                        @Html.Hidden("BackUrl", Url.Action("MaterialInwardOutwardReport", "Store"))
                                        @Html.Hidden("curmonth", "", new { @Value = ViewBag.curmonth })
                                    </div>                                    
                                    <div class="col-sm-2">
                                        <b>Month</b>
                                        @Html.DropDownList("ddlmonth", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Year</b>
                                        @Html.DropDownList("ddlyear", new SelectList(new[] { new { Text = "Select", Value = "Select", Selected = "True" },
              new { Text = "2012", Value = "2012",Selected = "false"},
       new { Text = "2013", Value = "2013", Selected = "false" },
       new { Text = "2014", Value = "2014", Selected = "false" },
       new { Text = "2015", Value = "2015", Selected = "false" },
       new { Text = "2016", Value = "2016", Selected = "false" },
       new { Text = "2017", Value = "2017", Selected = "false" },
       new { Text = "2018", Value = "2018", Selected = "false" },
       new { Text = "2019", Value = "2019", Selected = "false" }}, "Text", "Value", "Selected"), new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Opening Balance</b>
                                        @Html.TextBox("txtOpeningBalance", null, new { @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Inward</b>
                                        @Html.TextBox("txtInward", null, new { @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Outward</b>
                                        @Html.TextBox("txtOutward", null, new { @Class = "form-control input-sm" })
                                    </div>
                                     <div class="col-sm-2">
                                    <b>Closing Balance </b>
                                    @Html.TextBox("txtClosingBalance", null, new { @Class = "form-control input-sm" })
                                </div>
                                <div class="col-sm-1">
                                    <br />
                                    <button class="btn btn-success btn-block btn-sm" type="button" id="btnSearch" value="Search">
                                        <i class="ace-icon fa fa-search white"></i>Search</button>
                                </div>
                                <div class="col-sm-1">
                                    <br />
                                    <button class="btn btn-danger btn-block btn-sm" type="button" id="btnReset" value="Reset">
                                        <i class="ace-icon fa fa-undo white"></i>Reset</button>
                                </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-2">
                        </div>
                   
                        <!-- /.page-content-area -->
                    </div>
                </div>
            </div>
        </div>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <!-- PAGE CONTENT BEGINS -->
                <table id="materialInOutDetails">
                </table>
                <div id="MaterialsInOutJqGridPager">
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
            <!-- /.col -->
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/Store/MaterialInwardOutwardReport.js")" type="text/javascript"></script>
