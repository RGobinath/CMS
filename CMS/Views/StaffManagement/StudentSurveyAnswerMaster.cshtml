@{
    ViewBag.Title = "StudentSurveyAnswerMaster";
    Layout = "~/Views/Shared/NewAceMaster.cshtml"; 
}

<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    @*<div class="widget-header widget-header-small">*@
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>AcademicYear</b></label>
                                        @Html.DropDownList("ddlAcademicYear", new SelectList(ViewBag.acadddl, "AcademicYear", "AcademicYear", ViewBag.currentAcyear), "Select", new { id = "ddlAcademicYear", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Campus</b></label>
                                        @Html.DropDownList("ddlCampus", new SelectList(ViewBag.ddlcampus, "Name", "Name"), "Select", new { id = "ddlCampus", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Grade</b></label>
                                        @Html.DropDownList("ddlgrade", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { id = "ddlgrade", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Student Survey Group</b></label>
                                        @Html.DropDownList("ddlStudentSurveyGroup", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "ddlStudentSurveyGroup", @Class = "form-control select-sm" })
                                        @*@Html.DropDownList("ddlStudentSurveyQuestion", new SelectList("Name", "Name"), "Select One", new { id = "ddlStudentSurveyQuestion", @Class = "form-control select-sm" })*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Student Survey Question</b></label>
                                        @Html.DropDownList("ddlStudentSurveyQuestion", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "ddlStudentSurveyQuestion", @Class = "form-control select-sm" })
                                        @*@Html.DropDownList("ddlStudentSurveyQuestion", new SelectList("Name", "Name"), "Select One", new { id = "ddlStudentSurveyQuestion", @Class = "form-control select-sm" })*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Student Survey Answer</b></label>
                                        @Html.TextBox("txtStudentSurveyAnswer", "", new { id = "txtStudentSurveyAnswer", @Class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Is Positive </b>
                                        </label>
                                        @Html.DropDownList("ddlIsPositive", new SelectList(new[] {
                                              new{Value="Select One",Text="Select One"},
                                              new{Value="True",Text="Yes"},
                                              new{Value="False",Text="No"} 
                                 }, "Value", "Text", ""), new { id = "ddlIsPositive", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Is Active </b>
                                        </label>
                                        @Html.DropDownList("ddlIsActive", new SelectList(new[] {
                                              new{Value="Select One",Text="Select One"},
                                              new{Value="True",Text="Yes"},
                                              new{Value="False",Text="No"} 
                                 }, "Value", "Text", ""), new { id = "ddlIsActive", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-primary btn-info btn-block btn-sm" id="btnSearch">
                                            <i class="ace-icon fa fa-search white"></i>Search
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-danger btn-warning btn-block btn-sm" id="SrchbtnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue ">
                    @*<div class="widget-header widget-header-small">*@
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-plus-circle"></i>&nbsp;Add Student Survey Question
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>AcademicYear</b></label>
                                        @Html.DropDownList("ddlAcademicYearmaster", new SelectList(ViewBag.acadddl, "AcademicYear", "AcademicYear", ViewBag.currentAcyear), "Select", new { id = "ddlAcademicYearmaster", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Campus</b></label>
                                        @Html.DropDownList("ddlCampusmaster", new SelectList(ViewBag.ddlcampus, "Name", "Name"), "Select", new { id = "ddlCampusmaster", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Grade</b></label>
                                        @Html.DropDownList("ddlgrademaster", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { id = "ddlgrademaster", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Student Survey Group</b></label>
                                        @Html.DropDownList("ddlStudentSurveyGroupMaster", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "ddlStudentSurveyGroupMaster", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Student Survey Question</b></label>
                                        @Html.DropDownList("ddlStudentSurveyQuestionMaster", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "ddlStudentSurveyQuestionMaster", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Student Survey Answer</b></label>
                                        @Html.TextBox("txtStudentSurveyAnswerMaster", "", new { id = "txtStudentSurveyAnswerMaster", @Class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Student Survey Mark</b></label>
                                        @Html.TextBox("txtStudentSurveyMarkMaster", "", new { id = "txtStudentSurveyMarkMaster", @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Is Positive </b>
                                        </label>
                                        @Html.DropDownList("ddlIsPositiveMaster", new SelectList(new[] {
                                              new{Value="Select One",Text="Select One"},
                                              new{Value="True",Text="Yes"},
                                              new{Value="False",Text="No"} 
                                 }, "Value", "Text", ""), new { id = "ddlIsPositiveMaster", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-success btn-info btn-block btn-sm" id="btnSave">
                                            <i class="ace-icon fa fa-save white"></i>Save
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-danger btn-warning btn-block btn-sm" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <table id="jqGridStudentSurveyAnswerList">
                </table>
                <div id="jqGridStudentSurveyAnswerListPager">
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content-area -->
</div>
<script src="@Url.Content("~/Scripts/StaffManagementScripts/StudentSurveyAnswerMaster.js")" type="text/javascript"></script>











