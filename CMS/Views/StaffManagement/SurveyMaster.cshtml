@{
    ViewBag.Title = "Survey Master";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

<div class="page-content">

    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>

                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Survey Name</b></label>
                                            @Html.TextBox("txtSurveyName", "", new { id = "txtSurveyName", @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Is Active</b></label>
                                        @Html.DropDownList("ddlIsActive",
                                            new SelectList(new[] { 
                                                new { Text = "Select One", Value = "Select One", Seleced = "True" },
                                                new { Text = "true", Value = "Yes", Seleced = "false" },
                                                new { Text = "false", Value = "No", Seleced = "false" },
                                       }, "Text", "Value", "Seleced"),
                                       new { @Class = "form-control select-sm" })
                                    </div>
                                    
                                    <div class="col-sm-1">
                                        <br />
                                        <button type="submit" class="btn btn-success btn-block btn-sm" id="btnSearch">
                                            <i class="ace-icon fa fa-search"></i>Search
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button type="button" class="btn btn-danger btn-block btn-sm" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="space-2"></div>
                    <div class="space-2"></div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <table id="grid-table"></table>
                <div id="grid-pager">
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
            <!-- /.col -->
        </div>
        <div class="space-2">
        </div>
    </div>
</div>

<script src='@Url.Content("/assets/js/AceJQMsg.js")' type="text/javascript"></script>
<script src="@Url.Content("../../Scripts/StaffManagementScripts/SurveyMaster.js")" type="text/javascript"></script>
