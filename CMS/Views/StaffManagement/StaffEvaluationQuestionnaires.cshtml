@{
    ViewBag.Title = "Staff Evaluation Questionnaires";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta charset="utf-8" />
<meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<!-- #section:basics/navbar.layout -->
<!-- /section:basics/navbar.layout -->

<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    @*<div class="widget-header widget-header-small">*@
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Campus</b></label>
                                        @Html.DropDownList("Srchddlcampus", new SelectList(Enumerable.Empty<SelectListItem>()),"Select One", new { id = "Srchddlcampus", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Grade</b></label>
                                        @Html.DropDownList("Srchddlgrade", new SelectList(Enumerable.Empty<SelectListItem>()),"Select One",new { id = "Srchddlgrade", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Academic Year</b></label>
                                        @Html.DropDownList("Srchddlacademicyear", new SelectList(Enumerable.Empty<SelectListItem>()),"Select One",new { id = "Srchddlacademicyear", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Month</b></label>
                                       @Html.DropDownList("Srchddlmonth", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })                                        
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Category Name</b></label>
                                        @Html.DropDownList("SrchddlCategoryName", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One",new { id = "SrchddlCategoryName", @Class = "form-control select-sm" })
                                        @*@Html.TextBox("SrchtxtCategoryName", "", new { @Class = "form-control input-sm" })*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Question</b></label>
                                        @Html.TextBox("SrchtxtQuestion", "",new {  @class = "form-control input-sm" })
                                    </div>                                    
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Is Positive</b></label>
                                        @Html.DropDownList("SrchddlIsPositive", new SelectList(new[]
                                          {
                                              new{Value="",Text="Select One"},
                                              new{Value="True",Text="Yes"},
                                              new{Value="False",Text="No"}                                              
                                          },
                            "Value", "Text", ""), new { id = "SrchddlIsPositive", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>IsActive</b></label>
                                        @Html.DropDownList("ddlIsActive", new SelectList(new[]
                                          {
                                              new{Value="",Text="Select One"},
                                              new{Value="True",Text="Yes"},
                                              new{Value="False",Text="No"}                                              
                                          },
                            "Value", "Text", ""), new { id = "ddlIsActive", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-primary btn-info btn-block btn-sm" id="btnSearch">
                                            <i class="ace-icon fa fa-search white"></i>Search
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-danger btn-warning btn-block btn-sm" id="SrchbtnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue collapsed">
                    @*<div class="widget-header widget-header-small">*@
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-plus-circle"></i>&nbsp;Add Staff Evaluation Questionnaires
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Campus</b></label>
                                        @Html.DropDownList("ddlcampus", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "ddlcampus", @Class = "form-control select-sm" })
                                        @*@Html.DropDownList("ddlcampus", new MultiSelectList(Enumerable.Empty<SelectListItem>()), new { @multiple = "multiple" })*@
                                        @*@Html.DropDownList("ddlcampus", new SelectList(ViewBag.campusddl, "Name", "Name"), "Select One", new { id = "ddlcampus", @Class = "form-control select-sm" })*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Grade</b></label>
                                        @Html.DropDownList("ddlgrade", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })
                                        @*@Html.DropDownList("ddlgrade", new SelectList(ViewBag.gradeddl, "gradcod", "gradcod"), "Select Grade", new { id = "ddlgrade", @Class = "form-control select-sm" })*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Academic Year</b></label>
                                        @Html.DropDownList("ddlacademicyear", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })
                                        @*@Html.DropDownList("ddlacademicyear", new SelectList(ViewBag.acadddl, "AcademicYear", "AcademicYear"), "Select One", new { id = "ddlacademicyear", @Class = "form-control select-sm" })*@
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Month</b></label>
                                        @Html.DropDownList("ddlmonth", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })                                        
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Category Name</b></label>
                                        @Html.DropDownList("ddlCategoryName", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-sm-4">
                                        <label for="form-field-select-1">
                                            <b>Question</b></label>
                                        @Html.TextArea("txtareaQuestion", new { @maxlength = "4000", @class = "form-control textarea" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Is Positive</b></label>
                                        @Html.DropDownList("ddlIsPositive", new SelectList(new[]
                                          {
                                              new{Value="",Text="Select One"},
                                              new{Value="True",Text="Yes"},
                                              new{Value="False",Text="No"}                                              
                                          },
                            "Value", "Text", ""), new { id = "ddlIsPositive", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-1" style="margin-top: 20px; margin-left: 3px; margin-bottom: 5px;">
                                        <br />
                                        <button class="btn btn-success btn-info btn-block btn-sm" id="btnSave">
                                            <i class="ace-icon fa fa-save white"></i>Save
                                        </button>
                                    </div>
                                    <div class="col-sm-1" style="margin-top: 20px; margin-left: 3px; margin-bottom: 5px;">
                                        <br />
                                        <button class="btn btn-danger btn-warning btn-block btn-sm" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <table id="grid-table">
                </table>
                <div id="grid-pager">
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content-area -->
</div>
<script type="text/javascript">
    window.jQuery || document.write("<script src='../assets/js/jquery.min.js'>" + "<" + "/script>");
</script>
<script type="text/javascript">
    if ('ontouchstart' in document.documentElement) document.write("<script src='../assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
</script>
<!-- inline scripts related to this page -->
<script src="@Url.Content("~/Scripts/StaffManagementScripts/StaffEvaluationParameter.js")" type="text/javascript"></script>
