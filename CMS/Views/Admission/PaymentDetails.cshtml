@model TIPS.Entities.AdmissionEntities.StudentTemplate
<div class="row">
    <div class="col-xs-12 widget-container-col">
        <div class="widget-box widget-color-CustomizeBlue">
            <div class="widget-header widget-header-flat widget-header-small">
                <div class="PanelHeader">
                    <i class="ace-icon fa fa-inr"></i>&nbsp;Payment Details
                </div>
                <div class="widget-toolbar">
                    <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="space-6">
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Fees Type</b></label><br />
                                @Html.DropDownListFor(Model => Model.PaymentDetailsList[0].FeeType, new SelectList(ViewBag.feetypeddl, "FeeType", "FeeType"), "Select", new { id = "feetypeddl", @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Mode of Payment</b></label><br />
                                @Html.DropDownListFor(Model => Model.PaymentDetailsList[0].ModeOfPayment, new SelectList(ViewBag.modeofpmtddl, "ModeOfPayment", "ModeOfPayment"), "Select", new { id = "modeofpmtddl", @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Date of CHQ/DD</b></label><br />
                                @Html.TextBoxFor(Model => Model.PaymentDetailsList[0].ChequeDate, new { id = "ChequeDate", @Class = "form-control date-picker", @maxlength = "20" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Reference No</b></label><br />
                                @Html.TextBoxFor(Model => Model.PaymentDetailsList[0].ReferenceNo, new { id = "ReferenceNo", @Class = "form-control input-sm", @maxlength = "20" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Bank Name</b></label><br />
                                @Html.DropDownListFor(Model => Model.PaymentDetailsList[0].BankName, new SelectList(ViewBag.BankName, "BankName", "BankName"), "Select", new { id = "BankName", @Class = "form-control select-sm", @maxlength = "20" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Amount</b></label><br />
                                @Html.TextBoxFor(Model => Model.PaymentDetailsList[0].Amount, new { id = "Amount", @Class = "form-control input-sm", @maxlength = "20" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Paid Date</b></label><br />
                                @Html.TextBoxFor(Model => Model.PaymentDetailsList[0].PaidDate, new { id = "PaidDate", @Class = "form-control from_date", @maxlength = "20" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Cleared date</b></label><br />
                                @Html.TextBoxFor(Model => Model.PaymentDetailsList[0].ClearedDate, new { id = "ClearedDate", @Class = "form-control to_date", @maxlength = "20" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Payment Status</b></label><br />
                                @Html.DropDownListFor(Model => Model.PaymentDetailsList[0].FeePaidStatus, new SelectList(new[]
                                          {
                                              new{Value="",Text="Select One"},
                                              new{Value="InProgress",Text="InProgress"},
                                              new{Value="FeePaid",Text="FeePaid"}
                                              }, "Value", "Text", ""), new { id = "Status", @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-4">
                                <label for="form-field-select-1">
                                    <b>Remarks</b></label><br />
                                @Html.TextAreaFor(Model => Model.PaymentDetailsList[0].Remarks, new { rows = 1, cols = 70, id = "Remarks", @Class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2">
                                <div class="space-8">
                                </div>
                                <button class="btn btn-xs btn-primary" type="submit" name="AddPayment" value="AddPayment"
                                    id="pmtbtn" onclick="return(Paymentvalidate());">
                                    <i class="ace-icon fa fa-arrows"></i><span class="bigger-110">Add Payment&nbsp;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="space-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="space-2">
</div>
<div class="row">
    <div class="col-xs-12">
        <table id="payment-grid-table">
        </table>
        <div id="payment-grid-pager">
        </div>
    </div>
</div>
<script src="../../Scripts/AdmissionScripts/PaymentDetails.js" type="text/javascript"></script>
<script src="../../assets/js/AceJQMsg.js" type="text/javascript"></script>
