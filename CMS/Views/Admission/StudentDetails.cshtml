                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-sm-6">
                            <u><b>Secondary Address</b></u>
                            <div class="space-4">
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="col-sm-4">
                                        <label>
                                            <b>Add1</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].Add1, new { id = "Address11", @Class = "form-control input-sm", @maxlength = "45" })
                                    </div>
                                    <div class="col-sm-4">
                                        <label>
                                            <b>Add2</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].Add2, new { id = "Address21", @Class = "form-control input-sm", @maxlength = "45" })
                                    </div>
                                    <div class="col-sm-4">
                                        <label>
                                            <b>Add3</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].Add3, new { id = "Address31", @Class = "form-control input-sm", @maxlength = "45" })
                                    </div>
                                </div>
                            </div>
                            <div class="space-4">
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="col-sm-4">
                                        <label>
                                            <b>City</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].City, new { id = "City1", @Class = "form-control input-sm", @maxlength = "40" })
                                    </div>
                                    <div class="col-sm-4">
                                        <label>
                                            <b>State</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].State, new { id = "State1", @Class = "form-control input-sm", @maxlength = "40" })
                                    </div>
                                    <div class="col-sm-4">
                                        <label>
                                            <b>Country</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].Country, new { id = "Country1", @Class = "form-control input-sm", @maxlength = "40" })
                                    </div>
                                </div>
                            </div>
                            <div class="space-4">
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="col-sm-4">
                                        <label>
                                            <b>Pin</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].Pin, new { id = "Pin1", @Class = "form-control input-sm", @maxlength = "10" })
                                    </div>
                                    <div class="col-sm-4">
                                        <label>
                                            <b>Phone</b></label>
                                        @Html.TextBoxFor(model => model.AddressDetailsList[1].Phone, new { id = "PhnNo1", @Class = "form-control input-sm", @maxlength = "40" })
