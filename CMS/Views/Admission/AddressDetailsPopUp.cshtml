@model TIPS.Entities.AdmissionEntities.StudentTemplate
@{
    ViewBag.Title = "Address Details PopUp";
    Layout = "~/Views/Shared/PartialViewMaster.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        var Id = '@ViewBag.Id';
        var type = '@ViewBag.type';
        //  var PreRegNum = '@ViewBag.PreRegNum';
        $("#btnCreate").click(function () {
            ;
            Id = Id;
            type = type;
            Add1 = $("#Add1").val();
            Add2 = $("#Add2").val();
            Add3 = $("#Add3").val();
            City = $("#City").val();
            State = $("#State").val();
            Country = $("#Country").val();
            Pin = $("#Pin").val();
            window.location.href = "/Admission/uploaddisplay?Id=" + Id + '&type=' + type + '&Add1=' + Add1 + '&Add2=' + Add2 + '&Add3=' + Add3 + '&City=' + City + '&State=' + State + '&Country=' + Country + '&Pin=' + Pin;
            $("#AddressDetailsDiv").dialog('Close');
        });
    });
</script>
<table class="WithBorderOnly" width="100%">
    <tr>
        <td>
            <label class="lblheader">
                Primary Address
            </label>
        </td>
    </tr>
    <tr>
        <td style="border-right: 1px solid #ccc;">
            <table style="height: 170px;" class="InnerTable">
                <tr>
                    <td style="font-weight: bold; padding-right: 30px;">
                        <label>
                            Add1</label>
                    </td>
                    <td style="font-weight: bold">
                        <label>
                            Add2</label>
                    </td>
                    <td style="font-weight: bold">
                        <label>
                            Add3</label>
                    </td>
                </tr>
                <tr>
                    <td style="padding-right: 30px;">@Html.TextBoxFor(model => model.AddressDetailsList[0].Add1, new { id = "Add1", @Class = "CSSTextBox", @maxlength = "45" })
                    </td>
                    <td style="padding-right: 30px;">@Html.TextBoxFor(model => model.AddressDetailsList[0].Add2, new { id = "Add2", @Class = "CSSTextBox", @maxlength = "45" })
                    </td>
                    <td style="padding-right: 30px;">@Html.TextBoxFor(model => model.AddressDetailsList[0].Add3, new { id = "Add3", @Class = "CSSTextBox", @maxlength = "45" })
                    </td>
                </tr>
                <tr>
                    <td style="border-right: 1px solid #ccc;">
                        &nbsp&nbsp&nbsp
                    </td>
                    <td>
                    </td>
                </tr>
                <tr>
                    <td style="font-weight: bold">
                        <label>
                            City</label>
                    </td>
                    <td style="font-weight: bold">
                        <label>
                            State</label>
                    </td>
                    <td style="font-weight: bold">
                        <label>
                            Country</label>
                    </td>
                </tr>
                <tr>
                    <td style="padding-right: 30px;">@Html.TextBoxFor(model => model.AddressDetailsList[0].City, new { id = "City", @Class = "CSSTextBox", @maxlength = "40" })
                    </td>
                    <td>@Html.TextBoxFor(model => model.AddressDetailsList[0].State, new { id = "State", @Class = "CSSTextBox", @maxlength = "40" })
                    </td>
                    <td>@Html.TextBoxFor(model => model.AddressDetailsList[0].Country, new { id = "Country", @Class = "CSSTextBox", @maxlength = "40" })
                    </td>
                </tr>
                <tr>
                    <td>
                        &nbsp&nbsp&nbsp
                    </td>
                </tr>
                <tr>
                    <td style="font-weight: bold">
                        <label>
                            Pin</label>
                    </td>
                    @* <td style="font-weight: bold">
                        <label>
                            Phone</label>
                    </td>*@
                </tr>
                <tr>
                    <td style="padding-right: 30px;">@Html.TextBoxFor(model => model.AddressDetailsList[0].Pin, new { id = "Pin", @Class = "CSSTextBox", @maxlength = "10" })
                    </td>
                    @* <td>@Html.TextBoxFor(model => model.AddressDetailsList[0].Phone, new { id = "PhnNo0", @Class = "CSSTextBox", @maxlength = "40" })
                    </td>*@
                    <td>
                        <input type="button" id="btnCreate" value="Download Bonafide Certificate" />
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
