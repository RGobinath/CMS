@model TIPS.Entities.AdmissionEntities.StudentTemplate
@{
    Layout = "~/Views/Shared/NewAcePartialViewMaster.cshtml";
}
<div class="page-content">
    <div class="page-content-area">
        @using (Html.BeginForm("Promotion", "Admission", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                        <div class="col-xs-12">
                            <div class="col-sm-4">
                                <label for="form-field-select-1">
                                    Campus
                                </label><br />
                                @Session["Promotioncamp"]
                            </div>
                            <div class="col-sm-4">
                                <label for="form-field-select-1">
                                    Grade</label>
                                @Html.DropDownListFor(Model => Model.Grade, new SelectList(ViewBag.gradeddl, "gradcod", "gradcod"), "Select One", new { id = "ddlgrade1", @Class = "form-control select-sm", @disabled = "disabled" })
                                @Html.HiddenFor(model => model.Grade)
                            </div>
                            <div class="col-sm-4">
                                <label for="form-field-select-1">
                                    Section</label>
                                @Html.DropDownListFor(Model => Model.Section, new SelectList(ViewBag.sectionddl, "Section", "Section"), "Select One", new { id = "promotesection", @Class = "form-control select-sm" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-sm-3">
                                <br />
                                 <button class="btn btn-block btn-primary" type="button" onclick="return(promotionvalidate());">
                            <i class="ace-icon fa fa-graduation-cap"></i>Promote</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
          
            
        }
    </div>
</div>
<script src="../../Scripts/AdmissionScripts/Promotion.js" type="text/javascript"></script>

