@{
    ViewBag.Title = "EditStaffStatusChange";
    Layout = "~/Views/Shared/NewAcePartialViewMaster.cshtml";
}

@Html.Hidden("MonthYear", "", new { id = "hdnAttMonthYear", @Value = ViewBag.MonthYear })
@Html.Hidden("AttendanceDate", "", new { id = "hdnAttDate", @Value = ViewBag.AttendanceDate })
@Html.Hidden("PreRegNum", "", new { id = "PopUpPreRegNum", @Value = ViewBag.PreRegNum })
@Html.Hidden("Campus", "", new { id = "PopUpCampus", @Value = ViewBag.Campus })
@Html.Hidden("Status", "", new { id = "PopUpStatus", @Value = ViewBag.Status })
@Html.Hidden("DateOfLongLeaveAndResigned", "", new { id = "PopUpDateOfLongLeaveAndResigned", @Value = ViewBag.DateOfLongLeaveAndResigned })
<div class="row">
    <div class="col-xs-12 widget-container-col">
        <div class="widget-box widget-color-CustomizeBlue">
            <div class="widget-header widget-header-flat widget-header-small">
                <div class="PanelHeader">
                    <i class="ace-icon fa fa-plus-circle"></i>&nbsp;Update Staff Status
                </div>
                <div class="widget-toolbar">
                    <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 10px;">
                        <div class="col-xs-12">
                            <div class="col-sm-3">
                                <label for="form-field-select-1">
                                    <b>Select Staff Current Status</b></label>
                                @Html.DropDownList("Status", new SelectList(new[] {
                                  new{Value="",Text="Select Status"},
                                  new{Value="Registered",Text="Active"},
                                              new{Value="LongLeave",Text="Long Leave"},
                                              new{Value="Resigned",Text="Relieved"},
                                              new{Value="Rejoining",Text="Rejoining"},
                                              new{Value="Others",Text="Others"},
                                 }, "Value", "Text", ""), new { id = "txtStatus", @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-3">
                                <label for="form-field-select-1" id="lblId">
                                    <b>Date Of LongLeave/Resigned </b>
                                </label>
                                @Html.TextBox("text", "", new { @Class = "form-control Datepicker", id = "txtDateOfLongLeaveAndResigned" })
                            </div>
                            <div class="col-sm-4">
                                <label for="form-field-select-1">
                                    <b>Remarks</b>
                                </label>
                                @Html.TextArea("Remarks", "", new { id = "Remarks", rows = 0, cols = 5, @class = "form-control input-sm" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-sm-3">
                                <button class="btn btn-success btn-info btn-block btn-sm" id="btnSave" type="button"
                                    onclick="StaffDetailsStatusChange();return false;">
                                    Save
                                </button>
                            </div>
                            <div class="col-sm-3">
                                <button class="btn btn-danger btn-block btn-sm" type="button" id="btnExit">
                                    Exit
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="space-2">
                    </div>
                </div>
            </div>
        </div>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table id="StaffAttendanceNewStatusGridListJqGrid">
                </table>
                <div id="StaffAttendanceNewStatusGridListJqGridpager">
                </div>
            </div>
        </div>
    </div>
</div>

@*<script src="../../assets/js/AceJQMsg.js" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/BioMetricAttendance/EditStaffStatusChange.js")" type="text/javascript"></script>

