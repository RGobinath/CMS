@{
    ViewBag.Title = "StudentDetails";
    Layout = null;
}
<style>

@*.ui-jqgrid .ui-jqgrid-btable { cursor : pointer; }*@

</style>
<div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-sm-2">
                    <b>Student ID</b><br />
                    <input type="text" id="idno" class="form-control input-sm" />
                </div>
                <div class="col-sm-2">
                    <b>Student Name</b><br />
                    <input type="text" id="name" class="form-control input-sm" />
                </div>
                <div class="col-sm-2">
                    <b>Section</b><br />
                    <input type="text" id="section" class="form-control input-sm" />
                </div>
                <div class="col-sm-2">
                    <b>Campus</b><br />
                    <input type="text" id="campus" class="form-control input-sm" />
                    @Html.Hidden("campus")
                </div>
                <div class="col-sm-2">
                    <b>Grade</b>
                    <br />
                    <input type="text" id="grade" class="form-control input-sm" />
                </div>
                <br />
                <div class="col-sm-1">
                <button class="btn btn-success btn-sm" type="button" id="Search">
                     <i class="ace-icon fa fa-search white"></i>Search</button>
                    
                </div>
                <div class="col-sm-1">
                <button class="btn btn-danger btn-sm" type="button" id="reset">
                        <i class="ace-icon fa fa-undo white"></i>Reset</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 widget-container-col">
        <!-- PAGE CONTENT BEGINS -->
        <table id="StudentList">
        </table>
        <div id="StudentPager">
        </div>
        <script type="text/javascript">
            var $path_base = ".."; //in Ace demo this will be used for editurl parameter
        </script>
        <!-- PAGE CONTENT ENDS -->
    </div>
    <!-- /.col -->
</div>
<script src="../../Scripts/Home/StudentDetails.js" type="text/javascript"></script>
