@model TIPS.Entities.StudentDetailsExport
@{
    ViewBag.Title = "StudentInfo";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta charset="utf-8" />
<meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<!-- #section:basics/navbar.layout -->

<!-- /section:basics/navbar.layout -->
<script type="text/javascript">
    try { ace.settings.check('main-container', 'fixed') } catch (e) { }
</script>
@using (Html.BeginForm("StudentInfo", "Home", FormMethod.Post))
{
    
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <span>@Html.Raw(ViewBag.BreadCrumb)</span>
            <!--Search Pannel-->
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="ace-icon fa fa-search"></i>&nbsp;Search Pannel</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="col-sm-2">
                                                    <b>Student ID</b>
                                                    @Html.TextBox("idno", "", new { @Class = "form-control select-sm" })
                                                    @Html.Hidden("BackUrl", Url.Action("StudentInfo", "Home"))
                                                </div>
                                                <div class="col-sm-2">
                                                    <b>Student Name</b>
                                                    @Html.TextBox("name", "", new { @Class = "form-control select-sm" })
                                                </div>
                                                <div class="col-sm-2">
                                                    <b>Gender</b>
                                                    @Html.DropDownList("ddlGender", new SelectList(new[]
                                          {
                                             new {Value="",Text="Select"},
                                              new{Value="Male",Text="Male"},
                                              new{Value="Female",Text="Female"}
                                          },
         "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                                </div>
                                                <div class="col-sm-2">
                                                    <b>Campus</b>
                                                    @Html.DropDownListFor(model => model.Campus, new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "ddlCampus", @Class = "form-control select-sm" })
                                                </div>
                                                <div class="col-sm-2">
                                                    <b>Grade</b>
                                                    @Html.DropDownListFor(model => model.Grade, new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "ddlGrade", @Class = "form-control select-sm" })
                                                </div>
                                                <div class="col-sm-2">
                                                    <b>Section</b>
                                                    @Html.DropDownList("ddlSection", new SelectList(new[]
                                          {
                                             new {Value="",Text="Select"},
                                              new{Value="A",Text="A"},
                                              new{Value="B",Text="B"},
                                              new{Value="C",Text="C"},
                                              new{Value="D",Text="D"},
                                              new{Value="E",Text="E"},
                                              new{Value="F",Text="F"}                                              
                                             
                                          },
         "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="space-2"></div>
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="col-sm-2">
                                                <b>Boarding Type </b>
                                                @Html.DropDownList("ddlBoardingType", new SelectList(new[]
                                          {
                                             new {Value="",Text="Select"},
                                              new{Value="Day Scholar",Text="Day Scholar"},
                                              new{Value="Week Boarder",Text="Week Boarder"},                                            
                                              new{Value="Residential",Text="Residential"},                                            
                                          },
"Value", "Text", ""), new { @Class = "form-control select-sm" })
                    
                                            </div>
                                            <div class="col-sm-2">
                                                <b>Admission Status </b>
                                                @Html.DropDownList("ddlAdmissionStatus", new SelectList(new[]
                                          {
                                            //  new{ Value="",Text="Select One"},
                                              new {Value="Registered",Text="Registered"},
                                              new{Value="New Enquiry",Text="New Enquiry"},
                                              new{Value="New Registration",Text="New Registration"},
                                              new{Value="Sent For Clearance",Text="Sent For Clearance"},
                                              new{Value="Sent For Approval",Text="Sent For Approval"},
                                              new{Value="On Hold",Text="On Hold"},
                                              new{Value="Declined",Text="Declined"},
                                              new{Value="Not Interested",Text="Not Interested"},
                                              new{Value="Not Joined",Text="Not Joined"},
                                              new{Value="Waiting For Reply",Text="Waiting For Reply"},
                                              new{Value="Joining Next Year",Text="Joining Next Year"},
                                              new{Value="Call For Interview",Text="Call For Interview"},
                                              new{Value="Discontinued",Text="Discontinued"},
                                          },
           "Value", "Text", "Select One"), new { @Class = "form-control select-sm" })
                                            </div>
                                            <div class="col-sm-2">
                                                <b>Academic Year</b>
                                                @Html.DropDownListFor(Model => Model.AcademicYear, new SelectList(ViewBag.acadddl, "AcademicYear", "AcademicYear"), "Select One", new { id = "ddlacademicyear", @Class = "form-control select-sm" })
                                            </div>
                                            <div class="col-sm-2">
                                                <b>Route Number</b>
                                                @Html.DropDownListFor(m => m.VanNo, new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { id = "vanno", @Class = "form-control select-sm" })
                                            </div>
                                            <div class="col-sm-1">
                                                <br />
                                                <button class="btn btn-success btn-block btn-sm" type="button" id="Search">
                                                    <i class="ace-icon fa fa-search white"></i>Search</button>
                                                
                                            </div>
                                            <div class="col-sm-1">
                                            <br />
                                            <button class="btn btn-danger btn-block btn-sm" type="button" id="reset">
                                                    <i class="ace-icon fa fa-undo white"></i>Reset</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.page-content-area -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <!-- PAGE CONTENT BEGINS -->
                    <table id="StudentList">
                    </table>
                    <div id="StudentListPager">
                    </div>
                    <script type="text/javascript">
                        var $path_base = ".."; //in Ace demo this will be used for editurl parameter
                    </script>
                    <!-- PAGE CONTENT ENDS -->
                </div>
                <!-- /.col -->
            </div>
        </div>
    </div>
}
<script src="@Url.Content("~/Scripts/Home/StudentInfo.js")" type="text/javascript"></script>
