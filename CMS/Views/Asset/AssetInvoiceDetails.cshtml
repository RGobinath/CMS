@{
    ViewBag.Title = "Asset Invoice Details";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta charset="utf-8" />
<meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<!-- #section:basics/navbar.layout -->
<!-- /section:basics/navbar.layout -->

<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    @*<div class="widget-header widget-header-small">*@
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <b>Document Type</b><br />
                                        @Html.DropDownList("SrchddlDocumentType", new SelectList(new[]
                                          {
                                              new{Value="",Text="Select One"},
                                              //new{Value="Warranty",Text="Warranty"},
                                              new{Value="PurchaseInvoice",Text="PurchaseInvoice"},
                                              new{Value="ServiceInvoice",Text="ServiceInvoice"},
                                              //new{Value="Others",Text="Others"}
                                          },
          "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Vendor Name</b><br />
                                        @Html.DropDownList("SrchddlVendor", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { id = "SrchddlVendor", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Invoice No.</b></label>
                                        @Html.TextBox("SrchtxtInvoiceNo", "", new { id = "SrchtxtInvoiceNo", @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Invoice Date</b></label>
                                        <div class="input-group input-group-sm">
                                            @Html.TextBox("SrchtxtInvoiceDate", "", new { id = "SrchtxtInvoiceDate", @Class = "form-control date-picker" })
                                            <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                        </div>
                                    </div>                                    
                                   @* <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Warranty(In Months)</b></label>
                                        @Html.TextBox("SrchtxtWarranty", "", new { id = "SrchtxtWarranty", @Class = "form-control input-sm" })
                                    </div>*@
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-primary btn-info btn-block btn-sm" id="btnSearch">
                                            <i class="ace-icon fa fa-search white"></i>Search
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-danger btn-warning btn-block btn-sm" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue collapsed">
                    @*<div class="widget-header widget-header-small">*@
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-plus-circle"></i>&nbsp;Add Invoice Details
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Document Type</b></label>
                                        @Html.DropDownList("ddlDocumentType", new SelectList(new[]
                                          {
                                              new{Value="",Text="Select"},
                                              //new{Value="Warranty",Text="Warranty"},
                                              new{Value="PurchaseInvoice",Text="PurchaseInvoice"},
                                              new{Value="ServiceInvoice",Text="ServiceInvoice"},
                                              //new{Value="Others",Text="Others"}
                                          },
          "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Vendor Name</b></label>
                                        @Html.DropDownList("ddlVendor", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { id = "ddlVendor", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Invoice No.</b></label>
                                        @Html.TextBox("txtInvoiceNo", "", new { id = "txtInvoiceNo", @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Invoice Date</b></label>
                                        <div class="input-group input-group-sm">
                                            @Html.TextBox("txtInvoiceDate", "", new { id = "txtInvoiceDate", @Class = "form-control date-picker" })
                                            <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Invoice Amount</b></label>
                                        <div class="input-group input-group-sm">
                                            @Html.TextBox("txtInvoiceAmount", "", new { id = "txtInvoiceAmount", @Class = "form-control input-sm" })
                                            <span class="input-group-addon"><i class="fa fa-inr"></i></span>
                                        </div>
                                    </div>
                                    @*<div class="col-sm-1">
                                        <label for="form-field-select-1"><b>Warranty</b></label>
                                        @Html.DropDownList("ddlYear", new SelectList(Enumerable.Empty<SelectListItem>()), "Year", new { id = "ddlYear", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-1">
                                        <label for="form-field-select-1"><b>&nbsp;</b></label>                                        
                                        @Html.DropDownList("ddlMonth", new SelectList(Enumerable.Empty<SelectListItem>()), "Month", new { id = "ddlMonth", @Class = "form-control select-sm" })
                                    </div>*@
                                    @*<div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Warranty(In Months)</b></label>
                                        @Html.TextBox("txtWarranty", "", new { id = "txtWarranty", @Class = "form-control input-sm" })
                                    </div>*@
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Number Of Assets</b></label>
                                        @Html.TextBox("txtTotalAsset", "", new { id = "txtTotalAsset", @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1"><b>Document Name</b></label>
                                        <input type="file" id="file1" name="file1" />
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-block btn-warning" type="button" id="Upload" name="DocUpload" value="Upload">
                                            <i class="ace-icon fa fa-upload bigger-110"></i>Upload
                                        </button>
                                    </div>
                                    @*<div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-danger btn-warning btn-block btn-sm" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <table id="grid-table">
                </table>
                <div id="grid-pager">
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content-area -->
</div>
<script type="text/javascript">
    window.jQuery || document.write("<script src='../assets/js/jquery.min.js'>" + "<" + "/script>");
</script>
<script type="text/javascript">
    if ('ontouchstart' in document.documentElement) document.write("<script src='../assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
</script>
<!-- inline scripts related to this page -->
<script src="@Url.Content("~/Scripts/Asset/AssetInvoiceDetails.js")" type="text/javascript"></script>

