@model TIPS.Entities.AssetEntities.AssetOrganizer
@{
    Layout = "~/Views/Shared/NewAcePartialViewMaster.cshtml";
}
<script src="../../assets/js/date-time/bootstrap-datetimepicker.min.js"></script>
<script src="../../assets/js/date-time/bootstrap-timepicker.min.js"></script>

<div class="row">
    <div class="col-xs-12 widget-container-col">
        <div class="widget-box widget-color-CustomizeBlue">
            <div class="widget-header widget-header-flat widget-header-small">
                <div class="PanelHeader">
                    <i class="ace-icon fa fa-search"></i>&nbsp;Add Event
                    @Html.HiddenFor(Model=>Model.Id)
                </div>
                <div class="widget-toolbar">
                    <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Request No</b></label>
                                 @Html.TextBoxFor(Model=>Model.RequestNo, new { id = "rqstNo", @class = "form-control",@Readonly = "Readonly" })

                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Campus</b></label>
                                @Html.DropDownListFor(Model=>Model.Campus, new SelectList(ViewBag.campusddl, "Name", "Name"), "----Select----", new {id="campusddl", @Class = "form-control select-sm" })

                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Hall</b></label>
                                @Html.DropDownListFor(Model=>Model.Campus, new SelectList(Enumerable.Empty<SelectListItem>()), "----Select----", new {id="Assetddl", @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Date</b></label>
                                <div class="input-group input-group-sm">
                                    @Html.TextBox("Date", "", new { id = "txtDate", @class = "form-control Attendancedatepicker" })
                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Start Time</b></label>
                                <div class="input-group bootstrap-timepicker timepicker">
                                    @Html.TextBox("FrmTime", "", new { id = "FrmTime", @class = "form-control input-small",@name="FromTime" })
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>End Time</b></label>
                                <div class="input-group bootstrap-timepicker timepicker">
                                    @Html.TextBox("ToTime", "", new { id = "ToTime", @class = "form-control input-small",@name="ToTime"})
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-sm-4">
                                <label for="form-field-select-1">
                                    <b>Description</b></label>
                                @Html.TextArea("EventDescrip", "", new { rows = 2, cols = 200, id = "EventDescrip", @class = "form-control textarea" })
                            </div>
                            <div class="col-sm-1">
                                <br />
                                <button type="button" class="btn btn-success btn-sm" id="btnAdd" onclick="return NewEvent()">
                                    <i class="glyphicon glyphicon-plus"></i>Add Event
                                </button>
                            </div>
                            <div class="col-sm-1">
                                <br />
                                <button type="button" class="btn btn-danger btn-sm" id="btnaddReset">
                                    <i class="ace-icon fa fa-undo white"></i>Reset
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="space-2"></div>
                </div>
            </div>
            <div>
            </div>
        </div>
    </div>
</div>
<div class="space-2"></div>
<div class="row">
    <div class="col-xs-12">
        <table id="EventMasterJqgrid">
        </table>
        <div id="EventMasterJqgridPager">
        </div>
    </div>
</div>
<script src="../../Scripts/Asset/RequestHall.js" type="text/javascript"></script>

