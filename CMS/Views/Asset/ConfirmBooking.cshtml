@{
    Layout = "~/Views/Shared/NewAcePartialViewMaster.cshtml";
}
<div class="row">
    <div class="col-xs-12 widget-container-col">
        <div class="widget-box widget-color-CustomizeBlue">
            <div class="widget-header widget-header-flat widget-header-small">
                <div class="PanelHeader">
                    <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel
                </div>
                <div class="widget-toolbar">
                    <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Campus</b></label>
                                @Html.DropDownList("srhCampusddl", new SelectList(ViewBag.campusddl, "Name", "Name"), "----Select----", new { @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Hall</b></label>
                                @Html.DropDownList("srhAssetddl", new SelectList(Enumerable.Empty<SelectListItem>()), "----Select----", new { @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Date</b></label>
                                <div class="input-group input-group-sm">
                                    @Html.TextBox("srhDate", "", new { id = "srhDate", @class = "form-control Attendancedatepicker" })
                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Status</b></label>
                                @Html.DropDownList("srhstatus", new SelectList(new[]
                                             {new{Value="Initiated",Text="Initiated"},
                                              new{Value="Approved",Text="Approved"},
                                              new{Value="Rejected",Text="Rejected"}
                                              }, "Value", "Text", ""), new { @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-1">
                                <br />
                                <button type="button" class="btn btn-success btn-sm" id="btncnfmSearch">
                                    <i class="ace-icon fa fa-search white"></i>Search
                                </button>
                            </div>
                            <div class="col-sm-1">
                                <br />
                                <button type="button" class="btn btn-danger btn-sm" id="btncnfmReset">
                                    <i class="ace-icon fa fa-undo white"></i>Reset
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="space-2"></div>
                </div>
            </div>
            <div>
            </div>
        </div>
    </div>
</div>
<div class="space-2"></div>
<div class="row">
    <div class="col-xs-12">
        <table id="EventMasterApproveJqgrid">
        </table>
        <div id="EventMasterApproveJqgridPager">
        </div>
    </div>
</div>
<div id="ApproveDiv" title="Approve Booking Request"></div>
<script src="../../Scripts/Asset/ConfirmBooking.js" type="text/javascript"></script>
<script src="@Url.Content("../../Scripts/Attendance/Attendance.js")" type="text/javascript"></script>

