@model TIPS.Entities.AdmissionEntities.StudentTemplate
@{
    ViewBag.Title = "LaptopDistribution";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

<div class="page-content">

    <div class="page-content-area">
      <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>

                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Academic Year</b></label>
                                        @Html.DropDownListFor(Model => Model.AcademicYear, new SelectList(ViewBag.acadddl, "AcademicYear", "AcademicYear"), "Select One", new { id = "ddlacademicyear", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Campus</b></label>
                                        @Html.DropDownList("Campus", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Grade</b></label>
                                        @Html.DropDownList("Grade", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Section</b></label>
                                        @Html.DropDownList("Section",
                                            new SelectList(new[] { 
                                                new { Text = "Select One", Value = ""},
                                                new { Text = "A", Value = "A"},
                                                new { Text = "B", Value = "B"},
                                                new { Text = "C", Value = "C"},
                                                new { Text = "D", Value = "D"},
                                                new { Text = "E", Value = "E"},
                                                new { Text = "F", Value = "F"}
                                       }, "Value", "Text", ""),
                                       new { @Class = "form-control select-sm" })                                         
                                    </div>
                                    <div class="col-sm-2">
                                        <br />
                                        <button type="submit" class="btn btn-success btn-block btn-sm" id="btnGetStdntLst">
                                            <i class="ace-icon fa fa-search"></i> Get Student List
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button type="button" class="btn btn-danger btn-block btn-sm" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="space-2"></div>
                    <div class="space-2"></div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <table id="grid-table"></table>
                <div id="grid-pager">
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
            <!-- /.col -->
        </div>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12" style="margin-top: 5px;">

                <div class="col-sm-2">
                    <button class="btn btn-block btn-primary" type="button" id="distributeBtn">
                        <i class="fa fa-caret-right fa-lg" aria-hidden="true"></i>&nbsp;Distribute</button>
                </div>
            </div>
        </div>

        </div>
    </div>

        <script src='@Url.Content("/assets/js/AceJQMsg.js")' type="text/javascript"></script>
        <script src="@Url.Content("../../Scripts/Asset/LaptopDistribution.js")" type="text/javascript"></script>
