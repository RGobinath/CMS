        if (Model != null && (Model.Status == "ResolveRequest") ||
                           (Model.Status == "ResolveRequestRejection") || (Model.Status == "Complete") || (Model.Status == "ApproveRequest"))
        {
    <table width="100%" class="WithBorderOnly">
