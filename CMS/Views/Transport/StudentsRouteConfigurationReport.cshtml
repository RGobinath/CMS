@model TIPS.Entities.TransportEntities.StudentsRouteConfigReport_vw
@{
    ViewBag.Title = "StudentsRouteConfigurationReport";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<div class="page-content">
    <div class="page-content-area">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-sm-2">
                    <label for="form-field-select-1">
                        <b>Campus</b></label>
                    @Html.DropDownListFor(Model => Model.Campus, new SelectList(ViewBag.campusddl, "Name", "Name"), "Select Campus", new { id = "ddlcampus", @Class = "form-control select-sm" })
                </div>
                <div class="col-sm-2">
                    <label for="form-field-select-1">
                        <b>Grade</b></label>
                    @Html.DropDownListFor(Model => Model.Grade, new SelectList(ViewBag.gradeddl1, "gradcod", "gradcod"), "Select Grade", new { id = "ddlgrade", @Class = "form-control select-sm" })
                </div>
                <div class="col-sm-2">
                    <label for="form-field-select-1">
                        <b>Section</b></label>
                    @Html.DropDownListFor(Model => Model.Section, new SelectList(ViewBag.sectionddl, "Section", "Section"), "Select One", new { id = "ddlsection", @Class = "form-control select-sm" })
                </div>
                <div class="col-sm-1">
                    <br />
                    <button class="btn btn-block btn-primary" type="button" id="btnSearch">
                        <i class="ace-icon fa fa-search bigger-110"></i>Search</button>
                </div>
                <div class="col-sm-1">
                    <br />
                    <button class="btn btn-block btn-danger" type="button" id="btnReset">
                        <i class="ace-icon fa fa-refresh bigger-110"></i>Reset</button>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-4" id="TransportRequiredPieChart" align="left">
                </div>
                <div class="col-xs-2" id="TransportRequiredGenderChart">
                </div>
                <div class="col-xs-3" id="TransportAllocationCommonCountChart">
                </div>
                <div class="col-xs-3" id="TransportAllocationGenderCountChart" align="right">
                </div>
            </div>
        </div>
        <div class="row">
            <p style="font-family: Verdana; font-size: 10px; font-weight: bold;" align="center">
                Transport Required & Student Allocation Report
            </p>
            <div class="col-sm-12 infobox-container">
            <div class="infobox infobox-OrangeRed">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-arrows"></i>
                    </div>
                    <div class="infobox-data">
                        <span class="infobox-data-number" id="TotalStudents"></span>
                        <div class="infobox-content">
                            Students</div>
                    </div>
                </div>
                <div class="infobox infobox-red">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-car"></i>
                    </div>
                    <div class="infobox-data">
                        <span class="infobox-data-number" id="TransportRequired"></span>
                        <div class="infobox-content">
                            Required</div>
                    </div>
                </div>
                <div class="infobox infobox-DarkGreen">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-code-fork"></i>
                    </div>
                    <div class="infobox-data">
                        <span class="infobox-data-number" id="TransportNotRequired"></span>
                        <div class="infobox-content">
                            Not Required
                        </div>
                    </div>
                </div>
                <div class="infobox infobox-indigo">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-map-marker"></i>
                    </div>
                    <div class="infobox-data">
                        <span class="infobox-data-number" id="RouteAllocated"></span>
                        <div class="infobox-content">
                            Route Allocated</div>
                    </div>
                </div>
                <div class="infobox infobox-Olive">
                    <div class="infobox-icon">
                        <i class="ace-icon fa fa-arrows"></i>
                    </div>
                    <div class="infobox-data">
                        <span class="infobox-data-number" id="RouteNotAllocated"></span>
                        <div class="infobox-content">
                            Route Not Allocated</div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
    </div>
</div>
<script src="../../Scripts/Transport/StudentsRouteConfigurationReport.js" type="text/javascript"></script>
