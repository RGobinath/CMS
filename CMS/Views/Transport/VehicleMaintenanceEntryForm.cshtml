    <div class="row" style="margin-top: 10px; margin-bottom: 5px;">
        <div class="col-xs-12">
            <div class="col-sm-3 ">
                @Html.HiddenFor(model => model.Campus, new { id = "hdnCampus" })
                @Html.HiddenFor(model => model.VehicleId, new { id = "hdnVehicleId" })
                @Html.HiddenFor(model => model.SupplierName, new { id = "hdnSupplierName1" })
                @Html.Hidden("VehicleCostId", "", new { id = "hdnVehicleCostId1", @Value = ViewBag.VehicleCostId })
                @Html.HiddenFor(model => model.MaintenanceId, new { id = "hdnMaintenanceId" })
                @if (Model != null)
                {
                    @(Html.CheckBoxFor(model => model.AC, new { id = "AC" }))
                }
                else
                {
                    @Html.CheckBox("AC", new { id = "AC" })
                }
                &nbsp;Ac
            </div>
            <div class="col-sm-3 ">
                @if (Model != null)
                {
                    @(Html.CheckBoxFor(model => model.Battery, new { id = "Battery" }))
                }
                else
                {
                    @Html.CheckBox("Battery", new { id = "Battery" })
                }
                &nbsp;Battery 
            </div>
            <div class="col-sm-3 ">
                @if (Model != null)
                {
                    @(Html.CheckBoxFor(model => model.Tyre, new { id = "Tyre" }))
                }
                else
                {
                    @Html.CheckBox("Tyre", new { id = "Tyre" })
                }
                &nbsp;Tyre 
            </div>
            <div class="col-sm-3 ">
                @if (Model != null)
                {
                    @(Html.CheckBoxFor(model => model.MechanicalMaintenance, new { id = "MechanicalMaintenance" }))
                }
                else
                {
                    @Html.CheckBox("MechanicalMaintenance", new { id = "MechanicalMaintenance" })
                }
                &nbsp;Mechanical
            </div>
