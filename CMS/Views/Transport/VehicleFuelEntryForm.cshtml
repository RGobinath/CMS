@model TIPS.Entities.TransportEntities.VehicleFuelRefillEntry
@{
    ViewBag.Title = "VehicleFuelEntryForm";
    Layout = null;
}
@using (Html.BeginForm("VehicleFuelEntryForm", "Transport", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="row">
        @*<div class="col-xs-12 widget-container-col">
            <div class="widget-box widget-color-CustomizeBlue ">*@
        @*<div class="widget-header widget-header-flat widget-header-small">
                    <div class="PanelHeader">
                        <i class="ace-icon fa fa-tint"></i>&nbsp;Fuel Details
                    </div>
                </div>*@
        @*<div class="widget-body">
                    <div class="widget-main no-padding">*@
        <div class="row" style="margin-top: 10px; margin-bottom: 5px;">
            <div class="col-xs-12">
                <div class="col-sm-3">
                    <label for="form-field-select-1">
                        <b>Vendor<sup style="color: red">*</sup></b></label>
                    <br />
                    @Html.HiddenFor(model => model.VehicleId, new { id = "hdnVehicleId" })
                    @Html.HiddenFor(model => model.Campus, new { id = "hdnCampus" })
                    @Html.Hidden("VehicleCostId", "", new { id = "hdnVehicleCostId", @Value = ViewBag.VehicleCostId })
                    @Html.HiddenFor(model => model.Vendor, new { id = "hdnVendor" })
                    @Html.HiddenFor(model => model.FuelRefillId, new { id = "hdnFuelRefillId" })
                    @if(Model != null)
                    {
                        @Html.DropDownListFor(model => model.Vendor, new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { @Class = "form-control select-sm" })
                    }
                    else
                    { 
                        @Html.DropDownList("Vendor", new SelectList(Enumerable.Empty<SelectListItem>()), "Select", new { @Class = "form-control select-sm" })
                    }
                </div>
                <div class="col-sm-3">
                    <label for="form-field-select-1">
                        <b>Invoice Number<sup style="color: red">*</sup></b>
                    </label>
                    @if (Model != null)
                    {
                        @Html.TextBoxFor(model => model.InvoiceNumber, new { @class = "form-control input-sm" })
                    }
                    else
                    { 
                        @Html.TextBox("InvoiceNumber", "", new { @class = "form-control input-sm" })
                    }
                </div>
                <div class="col-sm-3">
                    <label for="form-field-select-1">
                        <b>Indent Number<sup style="color: red">*</sup></b>
                    </label>
                    @if (Model != null)
                    {
                        @Html.TextBoxFor(model => model.IndentNumber, new { @class = "form-control input-sm" })
                    }
                    else
                    {
                        @Html.TextBox("IndentNumber", "", new { @class = "form-control input-sm" })
                    }
                </div>
                @* <div class="col-sm-3">
                                    <b>Travel Date</b><br />
                                    <div class="input-group input-group-sm">
                                        @Html.TextBoxFor(model => model.VehicleTravelDate, new { id = "VehicleTravelDate", @Class = "form-control date-picker", disabled = "true", @Value = Model.VehicleTravelDate != null ? Model.VehicleTravelDate.ToString("dd'/'MM'/'yyyy") : "" })
                                        <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                    </div>
                                </div>*@
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="col-sm-6">
                    <label for="form-field-select-1">
                        <b>Description</b></label>
                    @if (Model != null)
                    {
                        @Html.TextAreaFor(model => model.Description, new { rows = 5, cols = 50, @class = "form-control textarea" })
                    }
                    else
                    {
                        @Html.TextArea("Description", "", new { rows = 5, cols = 50, @class = "form-control textarea" })
                    }
                </div>
                @Html.Hidden("hdnCampus")
                @Html.Hidden("VehicleNo")

                <div class="col-sm-3">
                    <br />
                    <button type="button" class="btn btn-success btn-info btn-block btn-sm" id="btnSave"
                        onclick="FuelEntryCreate();return false;">
                        <i class="ace-icon fa fa-floppy-o bigger-120 white"></i>Save
                    </button>
                </div>
            </div>
        </div>
        @*</div>
                </div>*@
        @*     </div>
        </div>*@
    </div>
       
}
<style type="text/css">
    .ui-datepicker-calendar {
        display: none;
    }
</style>
<script src="../../assets/js/AceJQMsg.js" type="text/javascript"></script>


<script src="../../Scripts/Transport/VehicleFuelEntryForm.js"></script>
