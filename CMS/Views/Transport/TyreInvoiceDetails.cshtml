@model TIPS.Entities.TransportEntities.TyreInvoiceDetails
@{
    ViewBag.Title = "TyreManagement";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta charset="utf-8" />
<meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<!-- #section:basics/navbar.layout -->
<!-- /section:basics/navbar.layout -->
<script type="text/javascript">
    try { ace.settings.check('main-container', 'fixed') } catch (e) { }
</script>
<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
        @using (Html.BeginForm("TyreInvoiceDetails", "Transport", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        
            <span>@Html.Raw(ViewBag.BreadCrumb)</span>
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="ace-icon fa fa-search"></i>&nbsp;Search Pannel</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Ref No</b></label>
                                            @if (Model != null && Model.RefNo != null)
                                            {
                                                @Model.RefNo
                                            }
                                            @Html.HiddenFor(m => m.Id)
                                            @Html.Hidden("IdNum")
                                        </div>
                                        
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Campus</b></label>
                                            @Html.TextBoxFor(m => m.Campus, new { @class = "form-control input-sm", @readonly = true })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Purchase Date</b></label>
                                            <div class="input-group input-group-sm">
                                                @Html.TextBoxFor(m => m.PurchasedDate, new { @class = "form-control date-picker" })
                                                <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <b>Purchased From</b><br />
                                           <div class="row">
                                                    <div class="col-xs-12" style="padding: 0px">
                                                        <div class="col-sm-10">
                                                            @Html.TextBoxFor(m => m.PurchasedFrom, new { @class = "form-control input-sm", @readonly = true })</div>
                                                        <div class="col-sm-2" style="padding: 0px">
                                                            <a id="VendorSearch" style="cursor: pointer;"><i class="fa fa-search"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Purchased By</b></label>
                                            @Html.TextBoxFor(m => m.PurchasedBy, new { @class = "form-control input-sm" })
                                        </div>
                                        <div class="col-sm-1">
                                            <label for="form-field-select-1">
                                                <b>Invoice No</b></label>
                                            @Html.TextBoxFor(m => m.InvoiceNo, new { @class = "form-control input-sm" })
                                        </div>
                                        <div class="col-sm-1">
                                            <label for="form-field-select-1">
                                                <b>Status</b></label>
                                            @Model.Status
                                            @Html.HiddenFor(m => m.Status)
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Payment Type</b></label>
                                            @Html.DropDownListFor(m => m.PaymentType, new SelectList(new[]
                                          {
                                              new{Value="",Text="Select"},
                                              new{Value="Credit",Text="Credit"},
                                              new{Value="Paid",Text="Paid"},
                                          },
                              "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Total Cost</b></label>
                                            @Html.TextBoxFor(m => m.TotalCost, new { @class = "form-control input-sm", @readonly = true })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Tax %</b></label>
                                            @Html.TextBoxFor(m => m.TaxPercentage, new { @class = "form-control input-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>TaxAmount</b></label>
                                            @Html.TextBoxFor(m => m.TaxAmount, new { @class = "form-control input-sm", @readonly = true })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Other Expenses</b></label>
                                            @Html.TextBoxFor(m => m.OtherExpenses, new { @class = "form-control input-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Round Off Cost</b></label>
                                            @Html.TextBoxFor(m => m.RoundedOffCost, new { @class = "form-control input-sm", @readonly = true })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <table id="TyreDetailsList">
                    </table>
                    <div id="TyreDetailsListPager">
                    </div>
                    <script type="text/javascript">
                        var $path_base = ".."; //in Ace demo this will be used for editurl parameter
                    </script>
                    <!-- PAGE CONTENT ENDS -->
                </div>
                <!-- /.col -->
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-sm-2">
                        <br />
                        <button type="submit" class="btn btn-primary btn-block btn-sm" id="btnSave" name="btnSave"
                            value="Save">
                            <i class="ace-icon fa fa-save white"></i>Save
                        </button>
                    </div>
                    <div class="col-sm-2">
                        <br />
                        <button type="submit" class="btn btn-success btn-block btn-sm" id="btnComplete" name="btnComplete"
                            value="Complete">
                            <i class="ace-icon fa fa-check-square-o white"></i>Complete
                        </button>
                    </div>
                    <div class="col-sm-2">
                        <br />
                        <button type="submit" class="btn btn-danger btn-block btn-sm" id="btnBack" name="btnBack"
                            value="btnBack">
                            <i class="ace-icon fa fa-arrow-circle-o-left white"></i>Back to Inbox
                        </button>
                    </div>
                </div>
            </div>
        }
        <!-- /.page-content-area -->
    </div>
    <script type="text/javascript">        window.jQuery || document.write("<script src='../assets/js/jquery.min.js'>"
+ "<" + "/script>"); </script>
    <script type="text/javascript">        if ('ontouchstart'
in document.documentElement) document.write("<script src='../assets/js/jquery.mobile.custom.min.js'>"
+ "<" + "/script>"); </script>
    <!-- inline scripts related to this page -->
    <script type="text/javascript"> </script>
    <script src="../../Scripts/Transport/TyreInvoiceDetails.js" type="text/javascript"></script>
    <script src="../../assets/js/AceJQMsg.js" type="text/javascript"></script>
<div id="DivVendorSearch"></div>