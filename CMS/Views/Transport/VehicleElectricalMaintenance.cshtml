@{
    ViewBag.Title = "Vehicle Electrical Maintenance";
}
<div class="row">
    <div class="col-xs-12 widget-container-col">
        <div class="widget-box widget-color-CustomizeBlue">
            <div class="widget-header widget-header-flat widget-header-small">
                <div class="PanelHeader">
                    Electrical Maintenance Details
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                        <div class="col-xs-12">
                            <div class="col-sm-2">
                                <label for="form-field-select-1">
                                    <b>Campus</b></label>
                                @Html.DropDownList("ddlcampus", new SelectList(ViewBag.campusddl, "Name", "Name"), "----Select----", new { @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1 ">
                                    <b>Date Of Service</b></label>
                                <div class="input-group input-group-sm">
                                    @Html.TextBox("EDateOfService", "", new { @class = "form-control date-picker" })
                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1 ">
                                    <b>Service Provider</b></label>
                                @Html.TextBox("EServiceProvider", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1 ">
                                    <b>Service Cost</b></label>
                                @Html.TextBox("EServiceCost", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1 ">
                                    <b>Bill No</b></label>
                                @Html.TextBox("EBillNo", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1 ">
                                    <b>Spare Parts Used</b></label>
                                @Html.TextBox("ESparePartsUsed", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1 ">
                                    <b>Spare Parts Attachment</b></label>
                                <input type="file" id="EM_SparePartsUsedfile" name="EM_SparePartsUsedfile" />
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-sm-4 ">
                                <label for="form-field-select-1 ">
                                    <b>Description of Fault</b></label>
                                @Html.TextArea("EDescription", "", new { rows = 1, cols = 58, @class = "form-control textarea" })
                            </div>
                            <div class="col-sm-2">
                                <br />
                                <button class="btn btn-success btn-info btn-block btn-sm" id="btnSave" type="button"
                                    onclick="AddVehicleElectricalMaintenance();return false;">
                                    <i class="ace-icon fa fa-floppy-o bigger-120 white"></i>&nbsp Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <table id="VehicleElectricalMaintenanceList">
        </table>
        <div id="VehicleElectricalMaintenanceListPager">
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/Transport/VehicleElectricalMaintenance.js")" type="text/javascript"></script>
