@{
    ViewBag.Title = "DriverManagement";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Pannel
                        </div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Campus</b></label>
                                        @Html.DropDownList("ddlCampus", new SelectList(ViewBag.campusddl, "Name", "Name"), "Select One", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Driver Name</b></label>
                                        @Html.TextBox("driverName", "", new { @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Driver Id No</b></label>
                                        @Html.TextBox("driverIdNo", "", new { @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Status</b></label>
                                        @Html.DropDownList("ddlStatus", new SelectList(new[]
                                          {
                                              new{Value="",Text="Select One"},
                                              new{Value="Registered",Text="Registered"},
                                              new{Value="Inactive",Text="Inactive"}                                              
                                          }, "Value", "Text", ""), new { id = "ddlStatus", @Class = "form-control select-sm" })
                                        @*@Html.DropDownList(Model => Model.RoleCode, new SelectList(ViewBag.rolecodeddl, "", "RoleCode"), "Select", new { id = "rolecodeddl", @Class = "form-control select-sm" })*@
                                    </div>
                                    <div class="col-sm-2">
                                        @* <label for="form-field-select-1">
                                            <b>Department Code</b></label>*@

                                        @*@Html.DropDownListFor(Model => Model.DeptCode, new SelectList(ViewBag.deptcodeddl, "", "DeptCode"), "Select", new { id = "deptcodeddl", @Class = "form-control select-sm" })*@
                                    </div>

                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-primary btn-info btn-block btn-sm" type="button" id="btnSearch">
                                            <i class="ace-icon fa fa-search white"></i>Search
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button class="btn btn-danger btn-warning btn-block btn-sm" type="button" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <table id="DriverManagmentGrid">
                </table>
                <div id="DriverManagmentGridPager">
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
            <!-- /.col -->
        </div>
        <div class="space-2"></div>
        <div class="row">
            <div class="col-xs-12">


                <div class="col-sm-2">
                    <button class="btn btn-block btn-primary" type="button" id="IdCard">
                        <i class="ace-icon fa fa-print bigger-110">&nbsp;</i>Print Id Card</button>
                </div>


            </div>


        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content-area -->
</div>
<div id="PrintIdCardDialog"></div>
<script src="@Url.Content("~/Scripts/Transport/DriverManagement.js")" type="text/javascript"></script>
