@model TIPS.Entities.TransportEntities.DriverOTDetails
@{
    ViewBag.Title = "DriverOTDetails";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta charset="utf-8" />
<meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<!-- #section:basics/navbar.layout -->
<!-- /section:basics/navbar.layout -->
<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        @using (Html.BeginForm("DriverOTDetails", "Transport", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-sm-3">
                        <div class="row">
                            <div class="col-xs-12 widget-container-col">
                                <div class="widget-box widget-color-CustomizeBlue">
                                    <div class="widget-header widget-header-flat widget-header-small">
                                        <div class="PanelHeader">
                                            <i class="ace-icon fa fa-pencil-square-o"></i>&nbsp;Add Panel</div>
                                        <div class="widget-toolbar">
                                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main no-padding">
                                            <div class="row" style="margin-top: 10px; margin-left: -17px; margin-bottom: 5px;">
                                                <div class="col-xs-12" style="padding-top: 15px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Campus</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.DropDownListFor(Model => Model.Campus, new SelectList(ViewBag.campusddl, "Name", "Name"), "Select One", new { @Class = "form-control select-sm" })
                                                        @Html.Hidden("SuccessMsg", "", new { id = "SuccessMsg", @Value = ViewBag.Success })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 20px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Driver Name</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBoxFor(Model => Model.DriverName, new { @class = "form-control input-sm" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 20px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Driver ID No</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBoxFor(Model => Model.DriverIdNo, new { @class = "form-control input-sm" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 20px;">
                                                    <div class="col-xs-5">
                                                        <label for="form-field-select-1">
                                                            <b>OT Date</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        <div class="row">
                                                            <div class="col-xs-11">
                                                                @Html.TextBoxFor(Model => Model.OTDate, new {id="OTDate", @Class = "form-control date-picker" })
                                                            </div>
                                                            <div class="col-xs-1" style="margin-left: -20px;">
                                                                <i class="ace-icon fa fa-calendar"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 20px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>OT Type</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.DropDownListFor(Model => Model.OTType, new SelectList(new[]
                                          {
                                             new{Value="",Text="Select One"},
                                             new{Value="Evening",Text="Evening"},
                                             new{Value="Night",Text="Night"},
                                             new{Value="Out Station",Text="Out Station"},
                                             new{Value="Holiday",Text="Holiday"},
                                             new{Value="Remedial Trip",Text="Remedial Trip"},
                                          },
                   "Value", "Text", ""), new {id="OTType", @Class = "form-control select-sm" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 20px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>OT Allowance</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBoxFor(Model => Model.Allowance, new { @class = "form-control input-sm", @readonly = true })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 29px; padding-bottom: 47px;">
                                                    <div class="col-sm-6">
                                                        <button type="submit" class="btn btn-primary btn-block btn-sm" id="btnSave" onclick="SaveDriverOTDetails()">
                                                            <i class="ace-icon fa fa-plus-square-o white"></i>Add
                                                        </button>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <button type="button" class="btn btn-danger btn-block btn-sm" id="btnReset">
                                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                                        </button>
                                                    </div>
                                                </div>
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <table id="DriverOTDetailsList">
                        </table>
                        <div id="DriverOTDetailsListPager">
                        </div>
                        <script type="text/javascript">
                            var $path_base = "..";
                        </script>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="../../Scripts/Transport/DriverOTDetails.js" type="text/javascript"></script>
<script src="../../assets/js/AceJQMsg.js" type="text/javascript"></script>
