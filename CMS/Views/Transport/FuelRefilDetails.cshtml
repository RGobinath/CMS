@{
    ViewBag.Title = "TransportDetailsView";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        @using (Html.BeginForm("FuelRefilDetails", "Transport", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-sm-3">
                        <div class="row">
                            <div class="col-xs-12 widget-container-col">
                                <div class="widget-box widget-color-CustomizeBlue">
                                    <div class="widget-header widget-header-flat widget-header-small">
                                        <div class="PanelHeader">
                                            <i class="ace-icon fa fa-pencil-square-o"></i>&nbsp;Add Panel
                                        </div>
                                        <div class="widget-toolbar">
                                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main no-padding">
                                            <div class="row" style="margin-top: 10px; margin-left: -17px; margin-bottom: 5px;">
                                                <div class="col-xs-12" style="padding-top: 5px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Campus</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.DropDownList("ddlcampus", new SelectList(ViewBag.ddlcampus, "Name", "Name"), "Select One", new { @Class = "form-control select-sm" })
                                                        @Html.Hidden("SuccessMsg", "", new { id = "SuccessMsg", @Value = ViewBag.Success })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Vehicle No</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("VehicleNo", null, new { @class = "form-control input-sm" })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Fuel Type</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("FuelType", "", new { @class = "form-control input-sm", @readonly = true })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Fuel Qty(ltrs)</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("FuelQuantity", "", new { @class = "form-control input-sm" })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Litre Price</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("LitrePrice", "", new { @class = "form-control input-sm" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Total Price</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("TotalPrice", "", new { @class = "form-control input-sm", @readonly = true })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-xs-5">
                                                        <label for="form-field-select-1">
                                                            <b>Filled Date</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        <div class="row">
                                                            <div class="col-xs-12">
                                                                <div class="input-group input-group-sm">
                                                                    @Html.TextBox("FilledDate", "", new { @class = "form-control date-picker" })
                                                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                                                </div>
                                                            </div>                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Filled By </b>
                                                        </label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("FilledBy", "", new { @class = "form-control input-sm" })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Bunk Name </b>
                                                        </label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("BunkName", "", new { @class = "form-control input-sm" })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Fuel Fill Type </b>
                                                        </label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.DropDownList("FuelFillType", new SelectList(new[]
                                          {
                                             new {Value="",Text="Select"},
                                              new{Value="Full Tank",Text="Full Tank"},
                                              new{Value="Partial",Text="Partial"},
                                          }, "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Last MM Reading(kms) </b>
                                                        </label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("LastMiloMeterReading", "", new { @class = "form-control input-sm", @readonly = true })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Is KM Reseted</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.DropDownList("ddlIsReset", new SelectList(new[]
                                          {
                                              new{Value="",Text="Select One"},
                                              new{Value="True",Text="Yes"},
                                              new{Value="False",Text="No"}                                                                                        
                                          },
                            "Value", "Text", ""), new { id = "ddlIsReset", @Class = "form-control select-sm" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;" id="KMResetValue">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>KM Reset Value</b></label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("txtKMResetValue", "", new { id = "txtKMResetValue", @class = "form-control input-sm" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 10px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Current MM Reading(kms) </b>
                                                        </label>
                                                    </div>
                                                    <div class="col-sm-7">
                                                        @Html.TextBox("CurrentMiloMeterReading", "", new { @class = "form-control input-sm" })

                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 8px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Distance</b>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<b id="Distance"></b>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-xs-12" style="padding-top: 8px;">
                                                    <div class="col-sm-5">
                                                        <label for="form-field-select-1">
                                                            <b>Mileage(kmpl)</b>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<b id="Mileage"></b>
                                                        </label>
                                                    </div>
                                                </div>
                                                @Html.Hidden("hdnVehicleId")
                                                <div class="col-xs-12" style="padding-top: 14px; padding-bottom: 37px;">
                                                    <div class="col-sm-6">
                                                        <button type="submit" class="btn btn-primary btn-block btn-sm" id="btnSave" onclick="FuelRefillCreate(); return false;">
                                                            <i class="ace-icon fa fa-plus-square-o white"></i>Add
                                                        </button>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <button type="button" class="btn btn-danger btn-block btn-sm" id="btnReset">
                                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                                        </button>
                                                    </div>
                                                </div>
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <table id="FuelRefilListDetails">
                        </table>
                        <div id="FuelRefilListDetailsJqGridPager">
                        </div>
                        <script type="text/javascript">
                            var $path_base = "..";
                        </script>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="../../assets/js/AceJQMsg.js" type="text/javascript"></script>
<script src="../../Scripts/Transport/FuelRefilDetails.js"></script>
