@{
    ViewBag.Title = "VehicleMaintenance";
    Layout = null;
}
<div class="row">
    <div class="col-xs-12 widget-container-col">
        <div class="widget-box widget-color-CustomizeBlue ">
            <div class="widget-header widget-header-flat widget-header-small">
                <div class="PanelHeader">
                    Mechanical Maintenance Details</div>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                        <div class="col-xs-12">
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1">
                                    <b>Maintenance Type</b></label>
                                @Html.DropDownList("VehicleMaintenanceType", new SelectList(new[]
                                          {
                                             new {Value="",Text="Select"},
                                              new{Value="Planned",Text="Planned"},
                                              new{Value="Breakdown",Text="Breakdown"},
                                          },
                                      "Value", "Text", ""), new { @Class = "form-control select-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1">
                                    <b>Planned Date of Service</b></label>
                                <div class="input-group input-group-sm">
                                    @Html.TextBox("VehiclePlannedDateOfService", "", new { @class = "form-control date-picker" })
                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1">
                                    <b>Actual Date of Service</b></label>
                                <div class="input-group input-group-sm">
                                    @Html.TextBox("VehicleActualDateOfService", "", new { @class = "form-control date-picker" })
                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1">
                                    <b>Service Provider</b></label>
                                @Html.TextBox("VehicleServiceProvider", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1">
                                    <b>Spare Parts Used</b></label>
                                @Html.TextBox("VehicleSparePartsUsed", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1">
                                    <b>Service Cost</b></label>
                                @Html.TextBox("VehicleSeviceCost", "", new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1">
                                    <b>Bill No</b></label>
                                @Html.TextBox("VehicleServiceBillNo", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 " id="tdVehicleBreakDownLocation">
                                <label for="form-field-select-1">
                                    <b>Breakdown Location</b></label>
                                @Html.TextBox("VehicleBreakdownLocation", "", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-sm-2 " id="tdVehicleDateofBreakDown">
                                <label for="form-field-select-1">
                                    <b>Date of Breakdown</b></label>
                                <div class="input-group input-group-sm">
                                    @Html.TextBox("VehicleDateOfBreakdown", "", new { @class = "form-control date-picker" })
                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-sm-2 ">
                                <label for="form-field-select-1 ">
                                    <b>Spare Parts Attachment</b></label>
                                <input type="file" id="VM_SparePartsUsedfile" name="VM_SparePartsUsedfile" />
                            </div>
                            <div class="col-sm-4 ">
                                <label for="form-field-select-1">
                                    <b>Description of Fault</b></label>
                                @Html.TextArea("VehicleMaintenanceDescription", "", new { rows = 1, cols = 58, @class = "form-control textarea" })
                            </div>
                            <div class="col-sm-2 ">
                                <br />
                                <button class="btn btn-success btn-info btn-block btn-sm" id="btnSave1" type="button"
                                    onclick="AddVehicleMaintenance();return false;">
                                    <i class="ace-icon fa fa-floppy-o bigger-120 white"></i>&nbsp Save
                                </button>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-sm-2 ">
                                <button class="btn btn-success btn-info btn-block btn-sm" id="btnSave2" type="button"
                                    onclick="AddVehicleMaintenance();return false;">
                                    <i class="ace-icon fa fa-floppy-o bigger-120 white"></i>&nbsp Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <table id="VehicleMaintenanceList">
        </table>
        <div id="VehicleMaintenanceListPager">
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div>
    <!-- /.col -->
</div>
<script src="@Url.Content("~/Scripts/Transport/VehicleMaintenance.js")" type="text/javascript"></script>
