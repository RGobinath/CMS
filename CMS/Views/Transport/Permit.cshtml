@model TIPS.Entities.TransportEntities.VehicleDetails
<!-- #section:basics/navbar.layout -->
<!-- /section:basics/navbar.layout -->

<div id="Permit">
    <!-- /section:settings.box -->
    <div class="row">
        <div class="col-xs-12 widget-container-col">
            <div class="widget-box widget-color-CustomizeBlue ">
                <div class="widget-header widget-header-flat widget-header-small">
                    <div class="PanelHeader">
                        Permit Details</div>
                    <div class="widget-toolbar">
                        <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                        </a>
                    </div>
                </div>
                <div class="widget-body">
                    <div class="widget-main no-padding">
                        <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                            <div class="col-xs-12">
                                <div class="col-sm-2 form-group has-info">
                                    <label for="form-field-select-1">
                                        <b>Permit No</b></label>
                                    @Html.TextBox("PermitNo", "", new { @class = "form-control input-sm" })
                                </div>
                                <div class="col-sm-2 form-group has-info">
                                    <label for="form-field-select-1">
                                        <b>Valid In</b></label>
                                    @Html.TextBox("ValidIn", "", new { @class = "form-control input-sm" })
                                </div>
                                <div class="col-sm-2 form-group has-info">
                                    <label for="form-field-select-1">
                                        <b>Valid From</b></label>
                                    <div class="input-group input-group-sm">
                                        @Html.TextBox("ValidFrom", "", new { @class = "form-control date-picker" })
                                        <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                <div class="col-sm-2 form-group has-info">
                                    <label for="form-field-select-1">
                                        <b>Valid To</b></label>
                                    <div class="input-group input-group-sm">
                                        @Html.TextBox("ValidTo", "", new { @class = "form-control date-picker" })
                                        <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                <div class="col-sm-2 ">
                                    <br />
                                    <button class="btn btn-success btn-info btn-block btn-sm" id="btnSave" type="button"
                                        onclick="ValidatePermitDetails();return false;">
                                        <i class="ace-icon fa fa-floppy-o bigger-120 white"></i>&nbsp Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <table id="PermitJqGrid">
            </table>
            <div id="PermitPager">
            </div>
            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>

<!-- inline scripts related to this page -->
<script src="@Url.Content("~/assets/js/AceJQMsg.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Transport/Permit.js")" type="text/javascript"></script>

