@{
    ViewBag.Title = "Ass360RequestCreation";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

<script src="@Url.Content("/Scripts/Assess360/Ass360RequestCreation.js" )"type="text/javascript"></script>
<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
     @Html.Hidden("BackUrl", Url.Action("Assess360Inbox", "Assess360"))
       @Html.Hidden("CreatedBy", "", new { id = "CreatedBy", @value = ViewBag.createdBy })
        @Html.Hidden("UserRole", "", new { id = "UserRole", @value = ViewBag.userRole })
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="row">
            <div class="col-xs-12">
                <div class="col-sm-3 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="fa fa-pencil-square-o"></i>&nbsp; Assess360 Request Creation</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                            </div>
                            <div class="space-10">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-6">
                                        <label for="form-field-select-2">
                                            <b>Processed By</b></label>
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.TextBox("CreatedBy", null, new { @class = "form-control input-sm", @Readonly = "Readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="space-8">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-6">
                                        <label for="form-field-select-2">
                                            <b>User Role</b></label>
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.TextBox("UserRole", null, new { @class = "form-control input-sm", @Readonly = "Readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="space-8">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-6">
                                        <label for="form-field-select-2">
                                            <b>Campus</b></label>
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("Campus", new SelectList(Enumerable.Empty<SelectListItem>()), "Select One", new { @Class = "form-control select-sm" })
                                    </div>
                                </div>
                            </div>
                            <div class="space-8">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-6">
                                        <label for="form-field-select-2">
                                            <b>Grade</b></label>
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("Grade",
                    new SelectList(new[] { 
                        new { Text = "", Value = "Select", Seleced = "True" },
                        new { Text = "VI", Value = "VI", Seleced = "false" },
                        new { Text = "VII", Value = "VII", Seleced = "false" },
                        new { Text = "VIII", Value = "VIII", Seleced = "false" },
                        new { Text = "IX", Value = "IX", Seleced = "false" },
                        new { Text = "X", Value = "X", Seleced = "false" },
                        new { Text = "XI", Value = "XI", Seleced = "false" },
                        new { Text = "XII", Value = "XII", Seleced = "false" }
               }, "Text", "Value", "Seleced"),
                        new { @Class = "form-control select-sm" })
                                    </div>
                                </div>
                            </div>
                            <div class="space-8">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-6">
                                        <label for="form-field-select-2">
                                            <b>Section</b></label>
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("Section",
                    new SelectList(new[] { 
                        new { Text = "", Value = "Select", Seleced = "True" },
                        new { Text = "A", Value = "A", Seleced = "false" },
                        new { Text = "B", Value = "B", Seleced = "false" },
                        new { Text = "C", Value = "C", Seleced = "false" },
                        new { Text = "D", Value = "D", Seleced = "false" },
                        new { Text = "E", Value = "E", Seleced = "false" },
                        new { Text = "F", Value = "F", Seleced = "false" }
               }, "Text", "Value", "Seleced"),
                        new { @Class = "form-control select-sm" })
                                    </div>
                                </div>
                            </div>
                            <div class="space-8">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-6">
                                        <button class="btn btn-success btn-block btn-sm" id="search" value="Search" type="button">
                                            <i class="ace-icon fa fa-search white"></i>Search</button>
                                    </div>
                                    
                                    <div class="col-sm-6">
                                        <button class="btn btn-danger btn-block btn-sm" id="reset" value="Reset" type="button">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="space-4">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-5">
                                        <center>
                                            <button class="btn btn-primary btn-sm" id="ass360btn" type="button" value="NewAssess360">
                                                <i class="fa fa-plus-circle white">&nbsp;&nbsp;&nbsp;</i>   New  Assess360</button>
                                        </center>
                                    </div>
                                </div>
                            </div> <div class="space-8">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-xs-12" id="grid">
                            <table id="Ass360ReqCreation">
                            </table>
                            <div id="Ass360ReqCreationPager">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
