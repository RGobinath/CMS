<script src="@Url.Content("/Scripts/Assess360/StudentAchievement.js")" type="text/javascript"></script>
<div id="StudentAchievementTab">
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <span>@Html.Raw(ViewBag.BreadCrumb)</span>
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="fa fa-trophy"></i>&nbsp;Achievement / Award</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="col-sm-2">
                                                <label for="form-field-mask-1">
                                                    <b>Semester</b></label>
                                                @Html.DropDownList("SASemester",
                    new SelectList(new[] { 
                        new { Text = "", Value = "Select", Seleced = "True" },
                        new { Text = "Sem I", Value = "Sem I", Seleced = "false" },
                        new { Text = "Sem II", Value = "Sem II", Seleced = "false" },
                        new { Text = "Sem III", Value = "Sem III", Seleced = "false" },
               }, "Text", "Value", "Seleced"), new { @Class = "form-control select-sm" })
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="form-field-mask-1">
                                                    <b>Achievement Type</b></label>
                                                @Html.DropDownList("SAAchieveType",
                    new SelectList(new[] { 
                        new { Text = "", Value = "Select", Seleced = "True" },
                        new { Text = "Award", Value = "Award", Seleced = "false" },
                        new { Text = "Achievement", Value = "Achievement", Seleced = "false" },
               }, "Text", "Value", "Seleced"), new { @Class = "form-control select-sm" })
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="form-field-mask-1">
                                                    <b>Description</b></label>
                                                @Html.TextBox("SADescription", null, new { @class = "form-control select-sm", style = "width: 90%" })
                                            </div>
                                            <div class="space-10">
                                            </div>
                                            <div class="col-sm-1">
                                                <button type="button" class="btn btn-primary btn-block btn-sm" id="btnAddAchievement"
                                                    name="btnApprove" value="Add" tabindex="9">
                                                    <i class="fa fa-plus-circle"></i><span class="bigger-110">&nbsp;Add</span>
                                                </button>
                                            </div>
                                            <div class="col-sm-1">
                                                <button type="button" class="btn btn-danger btn-block btn-sm" id="btnResetAchieve"
                                                    name="btnApprove" value="Reset" tabindex="10">
                                                    <i class="fa fa-undo"></i><span class="bigger-110">&nbsp;Reset</span>
                                                </button>
                                            </div>
                                            <div class="col-sm-4">
                                                @Html.Hidden("AchievementId")
                                                @Html.Hidden("createddate")
                                                @Html.Hidden("createdby")
                                                @Html.Hidden("modifieddate")
                                                @Html.Hidden("modifiedby")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                             <div class="space-2"></div>
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="row">
                <div class="col-xs-12">
                    <table id="StudentAchievementlistgrid">
                    </table>
                    <div id="StudentAchievementlistgridPager">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
