@{
    ViewBag.Title = "Assess 360 Inbox";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta charset="utf-8" />
<meta name="description" content="Dynamic tables and grids using jqGrid plugin" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<!-- #section:basics/navbar.layout -->
<!-- /section:basics/navbar.layout -->
<script type="text/javascript">
    try { ace.settings.check('main-container', 'fixed') } catch (e) { }
</script>
<div class="page-content">
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel</div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <b>Name</b>
                                        @Html.TextBox("Name", null, new { @Class = "form-control input-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Campus Name</b>
                                        @Html.DropDownList("Campus", new SelectList(Enumerable.Empty<SelectListItem>()), new { id = "Campus", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Grade</b>
                                        @Html.DropDownList("Grade", new SelectList(new[] { 
                                        new { Value = "",Text = "Select"},
                                        new { Value = "VI",Text = "VI"},
                                        new { Value = "VII",Text = "VII" },
                                        new { Value = "VIII",Text = "VIII" },
                                        new { Value = "IX",Text = "IX" },
                                        new { Value = "X",Text = "X" }
                                        }, "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Section</b>
                                        @Html.DropDownList("Section", new SelectList(new[] { 
                                                new { Value = "", Text= "Select" },
                                                new { Value = "A",Text = "A" },
                                                new { Value = "B",Text = "B" },
                                                new { Value = "C",Text = "C" },
                                                new { Value = "D",Text = "D" },
                                                new { Value = "E",Text = "E" },
                                                new { Value = "F",Text = "F" },
                                                new { Value = "G",Text = "G" }
                                        }, "Value", "Text", ""), new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <b>Semester</b>
                                        @Html.DropDownList("Semester", new MultiSelectList(Enumerable.Empty<SelectListItem>()), "Select one", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button type="submit" class="btn btn-success btn-block btn-sm" id="btnSearch">
                                            <i class="ace-icon fa fa-search white"></i>Search
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                        <br />
                                        <button type="button" class="btn btn-danger btn-block btn-sm" id="btnReset">
                                            <i class="ace-icon fa fa-undo white"></i>Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="space-2">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <table id="ReportCardIBInboxList">
                            </table>
                            <div id="ReportCardIBInboxPage">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src='@Url.Content("/Scripts/Assess360/ReportCardIB.js")' type="text/javascript"></script>