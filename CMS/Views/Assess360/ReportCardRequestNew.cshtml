@{
    ViewBag.Title = "ReportCardRequest";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

<div class="page-content">
    @Html.Hidden("RetainDate", "", new { id = "RetainDate", @Value = ViewBag.dattime })
    @Html.Hidden("Year", "", new { id = "Year", @Value = ViewBag.CurYear })
    <div class="page-content-area">
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="space-2">
        </div>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Criteria</div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Campus</b></label>
                                        @Html.DropDownList("ddlCampus", new SelectList(ViewBag.campusddl, "Name", "Name"), "--Select Campus--", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Grade</b></label>
                                        @Html.DropDownList("ddlGrade", new SelectList(ViewBag.gradeddl, "gradcod", "gradcod"), "--Select Grade--", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Section</b></label>
                                        @Html.DropDownList("ddlSection", new SelectList(ViewBag.sectionddl, "Section", "Section"), "--Select Section--", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Group</b></label>
                                        @Html.DropDownList("ddlGroup", new SelectList(new[] {
                        new { Text = "Select Group", Value = "Select Group", Seleced = "True" },
                        new { Text = "Group1", Value = "Group1", Seleced = "false" },
                        new { Text = "Group2", Value = "Group2", Seleced = "false" },
                        new { Text = "Group3", Value = "Group3", Seleced = "false" } }, "Text", "Value", "Seleced"),new { id = "ddlGroup", @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-2">
                                        <label for="form-field-select-1">
                                            <b>Academic Year</b></label>
                                        @Html.DropDownList("ddlAcademic", new SelectList(ViewBag.acadyrddl, "AcademicYear", "AcademicYear"), "--Select AcademicYear--", new { @Class = "form-control select-sm" })
                                    </div>
                                    <div class="col-sm-1">
                                    <br />
                                        <button type="button" class="btn btn-success btn-block btn-sm" id="search">
                                            <i class="ace-icon fa fa-search white" style="vertical-align: middle"></i>&nbsp;Search
                                        </button>
                                    </div>
                                    <div class="col-sm-1">
                                    <br />
                                        <button type="button" class="btn btn-danger btn-block btn-sm" id="reset">
                                            <i class="ace-icon fa fa-undo white" style="vertical-align: middle"></i>&nbsp;Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-sm-3">
                                        <br />
                                        <button type="button" class="btn btn-primary btn-block btn-sm" id="saveRequest" value="Save Request">
                                            <i class="ace-icon fa fa-plus white" style="vertical-align: middle"></i>&nbsp;Create
                                            ReportCard Request
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="space-2"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <table id="ReportCardRequestGrid">
                            </table>
                            <div id="ReportCardRequestGridPager">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src='@Url.Content("/Scripts/Assess360/ReportCardRequestNew.js")' type="text/javascript"></script>
