<style type="text/css">

.ui-jqgrid .ui-pg-input
{
    width:30px;
}
.ui-jqgrid .ui-pg-selbox
{
    width:50px;
   height:25px;
}
</style>

<script type="text/javascript">

    $(document).ready(function () {

        $('#Assess').jqGrid({
            url: '/Widget/Assess360jqgrid',
            datatype: 'Json',
            type: 'GET',
            width: 350,
            height: 140,
            colNames: ['Id', 'Request No', 'Name', 'Section', 'ConsolidatedMarks'],
            colModel: [
            { name: 'Id', index: 'Id', hidden: true, key: true },
            { name: 'RequestNo', index: 'RequestNo', width: 90, formatter: formateadorLink },
            { name: 'Name', index: 'Name', width: 100 },
            { name: 'Section', index: 'Section', width: 30, align: "center" },
            { name: 'ConsolidatedMarks', index: 'ConsolidatedMarks', width: 90, align: "center" }, ],
            rowNum: 5,
            rowList: [5, 10, 20],
            sortorder: 'Asc',
            sortname: 'Name',
            pager: 'AssessPager'
        });
        $('#Assess').jqGrid('filterToolbar', { searchOnEnter: true, enableClear: false });
    });
    function formateadorLink(cellvalue, options, rowObject) {
        return "<a href=/Assess360/Assess360?Id=" + rowObject[0] + ">" + cellvalue + "</a>";
    }
</script>
<div id="AssessDetails">
    <table id="Assess">
    </table>
    <div id="AssessPager">
    </div>
</div>
