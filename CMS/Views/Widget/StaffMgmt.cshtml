<style type="text/css">

.ui-jqgrid .ui-pg-input
{
    width:30px;
}
.ui-jqgrid .ui-pg-selbox
{
    width:50px;
   height:25px;
}
</style>

<script type="text/javascript">

    $(document).ready(function () {

        $('#Staff').jqGrid({
            url: '/Widget/Stafflistjqgrid',
            datatype: 'Json',
            type: 'GET',
            width: 350,
            height: 140,
            colNames: ['Id','Name', 'ID Number', 'Campus', 'Designation'],
            colModel: [
            { name: 'Id', index: 'Id', hidden:true },
            { name: 'Name', index: 'Name', width: 100 },
            { name: 'IdNumber', index: 'IdNumber', width: 100 },
            { name: 'Campus', index: 'Campus', width: 50 },
            { name: 'Designation', index: 'Designation', width: 65 }, ],
            rowNum: 6,
            rowList: [6, 10, 20],
            sortorder: 'Asc',
            sortname: 'Name',
            pager: 'StaffPager'
        });
        $('#Staff').jqGrid('filterToolbar', { searchOnEnter: true, enableClear: false });
    });
</script>
<div id="StaffDetails">
    <table id="Staff">
    </table>
    <div id="StaffPager">
    </div>
</div>
