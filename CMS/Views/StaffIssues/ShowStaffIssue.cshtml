@model TIPS.Entities.StaffEntities.StaffIssues
@{
    ViewBag.Title = "Show Staff Issue";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

@using (Html.BeginForm("ShowStaffIssue", "StaffIssues", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="page-content">
        <div class="page-content-area">
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="ace-icon fa fa-info-circle"></i>&nbsp;Basic Details</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <div class="col-sm-2">
                                            <b>Issue Number</b><br />
                                            @Model.IssueNumber
                                        </div>
                                        <div class="col-sm-2">
                                            <b>Created Date</b><br />
                                            @Model.CreatedDate
                                        </div>
                                        <div class="col-sm-2">
                                            <b>Created By</b><br />
                                            @Model.CreatedUserName
                                        </div>
                                        <div class="col-sm-2">
                                            <b>User Role</b><br />
                                            @Model.UserRoleName
                                        </div>
                                        <div class="col-sm-2">
                                            <b>Issue Status</b><br />
                                            @Model.ActivityFullName
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="ace-icon fa fa-tasks"></i>&nbsp;Issue Details</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <div class="col-sm-2">
                                            <b>Issue Group</b><br />
                                            @Model.IssueGroup
                                        </div>
                                        <div class="col-sm-2 form-group has-info">
                                            <label for="form-field-select-1">
                                                <b>Issue Type</b></label><br />
                                            @Model.IssueType
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="ace-icon fa fa-pencil-square-o"></i>&nbsp;Description Section</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                <div class="row" style="margin-top: 10px; margin-left: 3px; margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <div class="col-sm-4">
                                            <div class="row">
                                                <div class="col-xs-12 form-group has-info">
                                                    <b>Issue Description</b><br />
                                                    @Html.TextAreaFor(model => model.Description, new { rows = 1, cols = 52, id = "txtDescription", @class = "form-control textarea" })
                                                </div>
                                                <div class="col-xs-12 form-group has-info">
                                                    <b>Issue Resolution Comments</b><br />
                                                    @Html.TextAreaFor(model => model.Resolution, new { rows = 1, cols = 60, id = "txtResolution", @class = "form-control textarea" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            @if (Model != null && (Model.Status != "LogIssue"))
                                            {
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <b>Rejection Grid</b>
                                                        <table id="DescriptionForSelectedId">
                                                        </table>
                                                    </div>
                                                </div>
                                                
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-12 widget-container-col">
                    <div class="widget-box widget-color-CustomizeBlue">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <div class="PanelHeader">
                                <i class="ace-icon fa fa-upload bigger-110"></i>&nbsp;Documents Upload</div>
                            <div class="widget-toolbar">
                                <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                                </a>
                            </div>
                        </div>
                        <div class="widget-body" id="tblUploadFiles">
                            <div class="widget-main no-padding">
                                <div class="row" style="margin-top: 10px;  margin-bottom: 5px;">
                                    <div class="col-xs-12">
                                        <table id="Uploadedfileslist">
                                        </table>
                                        <div id="uploadedfilesgridpager">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-2">
            </div>
            <div class="row">
                <div class="col-xs-3">
                </div>
                <div class="col-xs-6">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-3"></div>
                    <div class="col-sm-3">
                        <button class="btn btn-purple btn-info btn-block btn-sm" type="button" id="btnBack">
                            <i class="ace-icon fa fa-arrow-circle-left white"></i>Back to Inbox</button>
                    </div>
                </div>
                <div class="col-xs-3">
                </div>
            </div>
        </div>
    </div>
}
<script src="@Url.Content("~/Scripts/StaffIssues/ShowStaffIssue.js")" type="text/javascript"></script>