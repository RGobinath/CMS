@{
    ViewBag.Title = "ReportCardMainAction";
    Layout = "~/Views/Shared/NewAceMaster.cshtml";
}

<script src="@Url.Content("~/Scripts/Assess360/ReportCardMainAction.js")" type="text/javascript"></script>

<div class="page-content">
    <!-- /section:settings.box -->
    <div class="page-content-area">
     @Html.Hidden("BackUrl", Url.Action("PYPFirstGrade", "AchievementReport"))
        <span>@Html.Raw(ViewBag.BreadCrumb)</span>
        <div class="row">
            <div class="col-xs-12 widget-container-col">
                <div class="widget-box widget-color-CustomizeBlue">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <div class="PanelHeader">
                            <i class="ace-icon fa fa-search"></i>&nbsp;Search Panel</div>
                        <div class="widget-toolbar">
                            <a data-action="collapse" href="#"><i class="1 ace-icon fa fa-chevron-down fa-6x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Request No</b></label>
                                            @Html.TextBox("RequestNo", null, new { @Class = "form-control input-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Campus Name</b></label>
                                            @Html.DropDownList("Campus", new SelectList(Enumerable.Empty<SelectListItem>()), "----Select----", new { @Class = "form-control select-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Name</b></label>
                                            @Html.TextBox("Name", null, new { @Class = "form-control input-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Section</b></label>
                                            @Html.DropDownList("Section", new SelectList(new[] { 
                        new { Text = "Select", Value = "Select", Seleced = "True" },
                        new { Text = "A", Value = "A", Seleced = "false" },
                        new { Text = "B", Value = "B", Seleced = "false" },
                        new { Text = "C", Value = "C", Seleced = "false" },
                        new { Text = "D", Value = "D", Seleced = "false" },
                        new { Text = "E", Value = "E", Seleced = "false" },
                        new { Text = "F", Value = "F", Seleced = "false" }
               }, "Text", "Value", "Seleced"), new { @Class = "form-control select-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Grade</b></label>
                                            @Html.DropDownList("Grade",
                    new SelectList(new[] { 
                        new { Text = "Select", Value = "Select", Seleced = "True" },
                        new { Text = "I", Value = "I", Seleced = "false" },
                        new { Text = "II", Value = "II", Seleced = "false" },
                        new { Text = "III", Value = "III", Seleced = "false" },
                        new { Text = "IV", Value = "IV", Seleced = "false" },
                        new { Text = "V", Value = "V", Seleced = "false" }
               }, "Text", "Value", "Seleced"),
                 new { @Class = "form-control select-sm" })
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="form-field-select-1">
                                                <b>Status</b></label>
                                            @Html.DropDownList("RptStatus", new SelectList(new[] { 
                        new { Text = "Open", Value = "WIP", Seleced = "true" },
                        new { Text = "Closed", Value = "Closed", Seleced = "false" }
               }, "Text", "Value", "Seleced"), new { @Class = "form-control input-sm" })
                                        </div>
                                    </div>
                                </div>
                                &nbsp;&nbsp;
                                <div class="space-2">
                                </div>
                                <div class="row">
                                    <center>
                                        <div class="col-xs-12">
                                            <div class="col-sm-2">
                                                <button class="btn btn-primary btn-block btn-sm" id="btnSearch" value="Search"
                                                    name="Search" type="button">
                                                    <i class="ace-icon fa fa-search white"></i>Search
                                                </button>
                                            </div>
                                            &nbsp;&nbsp;
                                            <div class="col-sm-2">
                                                <button class="btn btn-danger btn-block btn-sm" id="btnReset" value="Reset"
                                                    name="Reset" type="button">
                                                    <i class="ace-icon fa fa-undo white"></i>Reset
                                                </button>
                                            </div>
                                            &nbsp;&nbsp;
                                            <div class="col-sm-2">
                                                <button class="btn btn-success btn-block btn-sm" id="btnNewReport" value="New Report"
                                                    name="Reset">
                                                    <i class="fa fa-plus-circle">&nbsp;&nbsp;</i>New Report
                                                </button>
                                                @Html.Hidden("lgdUserId", "", new { @Value = ViewBag.lgdUserId })
                                                @Html.Hidden("lgdUserName", "", new { @Value = ViewBag.lgdUserName })
                                                @Html.Hidden("lgdInUserType", "", new { @Value = ViewBag.lgdInUserType })
                                            </div>
                                        </div>
                                    </center>
                                </div>
                            </div>
                        </div>
                        <div class="space-2"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        <div class="col-xs-12">
         <table id="ReportCardList">
            </table>
            <div id="ReportCardPage">
            </div>
        </div>
        </div>
    </div>
</div>
